/* 工单列表页面样式 */
.ticket-list-container {
  height: 100vh;
  background: #f8fafc;
  display: flex;
  flex-direction: column;
  position: relative;
}

/* ===== 工单状态样式 ===== */

/* 工单池样式 - 突出显示未分配工单 */
.ticket-card.pool-ticket {
  border-left: 4px solid #07c160 !important;
  background: linear-gradient(to right, #f0fff4, #ffffff) !important;
  position: relative;
}

.ticket-card.pool-ticket::before {
  content: '待接单';
  position: absolute;
  top: 16rpx;
  right: 16rpx;
  padding: 4rpx 12rpx;
  background: #07c160;
  color: white;
  font-size: 22rpx;
  border-radius: 4rpx;
  z-index: 1;
}

/* 已被接单的工单样式 */
.ticket-card.taken {
  background: #f5f5f5 !important;
  opacity: 0.85;
}

/* 我的工单样式 */
.ticket-card.my-ticket {
  border-left: 4px solid #1989fa !important;
  background: linear-gradient(to right, #f0f8ff, #ffffff) !important;
}

/* 状态提示文字 */
.status-hint {
  color: #999;
  font-size: 24rpx;
  font-style: italic;
  padding: 8rpx 16rpx;
  display: inline-block;
}

/* 搜索容器 */
.search-container {
  padding: 24rpx 32rpx;
  background: white;
  box-shadow: var(--shadow-light);
}

/* 筛选容器 */
.filter-container {
  background: white;
  padding: 0 32rpx 24rpx;
  border-bottom: 1rpx solid #e5e7eb;
}

/* 负责人显示 */
.assignee-display {
  display: flex;
  align-items: center;
  padding: 16rpx 0;
  border-bottom: 1rpx solid #f3f4f6;
  margin-bottom: 16rpx;
}

.assignee-label {
  font-size: 28rpx;
  color: #6b7280;
  margin-right: 12rpx;
}

.assignee-value {
  font-size: 28rpx;
  color: #111827;
  font-weight: 500;
}

.filter-scroll {
  width: 100%;
}

.filter-tabs {
  display: flex;
  gap: 16rpx;
  white-space: nowrap;
}

.filter-count {
  margin-left: 8rpx;
  font-weight: 600;
}

.filter-icon {
  margin-right: 8rpx;
}

/* 统计栏 */
.stats-bar {
  background: var(--light-blue-50);
  padding: 20rpx 32rpx;
  border-bottom: 1rpx solid var(--light-blue-200);
}

.stats-content {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.stats-text {
  font-size: 28rpx;
  color: #6b7280;
}

.stats-highlight {
  font-size: 28rpx;
  color: var(--primary-color);
  font-weight: 600;
}

/* 工单滚动区域 */
.ticket-scroll {
  flex: 1;
  overflow: hidden;
}

/* 工单列表 */
.ticket-list {
  padding: 24rpx 32rpx;
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

/* 工单卡片 */
.ticket-card {
  background: white;
  border-radius: var(--radius-md);
  padding: 24rpx;
  padding-bottom: 90rpx;
  box-shadow: var(--shadow-standard);
  border-left: 6rpx solid transparent;
  position: relative;
}

/* 可点击区域 */
.card-clickable {
  cursor: pointer;
}

.ticket-card.urgent-border {
  border-left-color: var(--priority-urgent);
}

/* 卡片头部 */
.card-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.header-left {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.ticket-no {
  font-size: 28rpx;
  font-weight: 600;
  color: #374151;
}

/* 卡片内容 */
.card-content {
  margin-bottom: 16rpx;
}

.ticket-title {
  font-size: 32rpx;
  color: #111827;
  font-weight: 500;
  display: block;
  margin-bottom: 8rpx;
}

.ticket-category {
  font-size: 26rpx;
  color: #6b7280;
}

/* 卡片信息 */
.card-info {
  display: flex;
  flex-wrap: wrap;
  gap: 24rpx;
  margin-bottom: 20rpx;
}

.info-item {
  display: flex;
  align-items: center;
  font-size: 26rpx;
  color: #6b7280;
}

.info-icon {
  margin-right: 8rpx;
}

/* 卡片操作 */
.card-actions {
  position: absolute;
  bottom: 24rpx;
  right: 24rpx;
  display: flex;
  gap: 12rpx;
  align-items: center;
}

/* 操作按钮样式优化 */
.card-actions .t-button {
  min-width: 120rpx;
}

.card-actions .t-button--success {
  background: #07c160;
  border-color: #07c160;
}

/* 已被接单提示优化 */
.card-actions .status-hint {
  background: #f5f5f5;
  border-radius: 8rpx;
  padding: 10rpx 20rpx;
}

/* 自定义磨砂按钮样式 */
.custom-btn {
  min-width: 120rpx;
  height: 56rpx;
  padding: 0 24rpx;
  font-size: 26rpx;
  border-radius: 12rpx;
  border: none;
  font-weight: 500;
  display: inline-flex;
  align-items: center;
  justify-content: center;
  position: relative;
  overflow: hidden;
  transition: all 0.3s ease;
}

/* 磨砂玻璃效果 */
.custom-btn::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: inherit;
  filter: blur(10px);
  opacity: 0.8;
  z-index: -1;
}

/* 查看详情按钮 - 浅蓝色 */
.btn-detail {
  background: rgba(66, 153, 225, 0.15);
  backdrop-filter: blur(10px);
  -webkit-backdrop-filter: blur(10px);
  color: #2563eb;
  border: 2rpx solid rgba(66, 153, 225, 0.3);
  box-shadow: 0 4rpx 12rpx rgba(66, 153, 225, 0.2);
  margin-right: 12rpx;
}

.btn-detail:active {
  background: rgba(66, 153, 225, 0.25);
  border-color: rgba(66, 153, 225, 0.5);
  transform: scale(0.98);
}

/* 完成工单按钮 - 浅红色 */
.btn-complete {
  background: rgba(239, 68, 68, 0.15);
  backdrop-filter: blur(10px);
  -webkit-backdrop-filter: blur(10px);
  color: #dc2626;
  border: 2rpx solid rgba(239, 68, 68, 0.3);
  box-shadow: 0 4rpx 12rpx rgba(239, 68, 68, 0.2);
}

.btn-complete:active {
  background: rgba(239, 68, 68, 0.25);
  border-color: rgba(239, 68, 68, 0.5);
  transform: scale(0.98);
}

/* 开始处理按钮 - 主色蓝色 */
.btn-primary {
  background: rgba(37, 99, 235, 0.15);
  backdrop-filter: blur(10px);
  -webkit-backdrop-filter: blur(10px);
  color: #2563eb;
  border: 2rpx solid rgba(37, 99, 235, 0.3);
  box-shadow: 0 4rpx 12rpx rgba(37, 99, 235, 0.2);
}

.btn-primary:active {
  background: rgba(37, 99, 235, 0.25);
  border-color: rgba(37, 99, 235, 0.5);
  transform: scale(0.98);
}

/* 默认按钮 - 灰色 */
.btn-default {
  background: rgba(107, 114, 128, 0.15);
  backdrop-filter: blur(10px);
  -webkit-backdrop-filter: blur(10px);
  color: #4b5563;
  border: 2rpx solid rgba(107, 114, 128, 0.3);
  box-shadow: 0 4rpx 12rpx rgba(107, 114, 128, 0.2);
}

.btn-default:active {
  background: rgba(107, 114, 128, 0.25);
  border-color: rgba(107, 114, 128, 0.5);
  transform: scale(0.98);
}

/* 加载更多 */
.load-more {
  padding: 32rpx;
  display: flex;
  justify-content: center;
}

/* 高级筛选弹窗 */
.filter-popup {
  background: white;
  border-radius: var(--radius-lg) var(--radius-lg) 0 0;
  padding: 32rpx;
  padding-bottom: calc(32rpx + env(safe-area-inset-bottom));
}

.popup-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 32rpx;
}

.popup-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #111827;
}

.popup-actions {
  display: flex;
  align-items: center;
  gap: 24rpx;
}

.reset-btn {
  font-size: 28rpx;
  color: #6b7280;
}

.filter-section {
  margin-bottom: 32rpx;
}

.filter-label {
  font-size: 30rpx;
  font-weight: 500;
  color: #374151;
  display: block;
  margin-bottom: 16rpx;
}

/* 滑动操作样式 */
.swipe-accept {
  background: var(--primary-color);
  color: white;
}

.swipe-pause {
  background: #faad14;
  color: white;
}

/* TDesign组件样式覆盖 */
.ticket-list-container .t-search {
  background: var(--light-blue-50);
  border-radius: var(--radius-md);
}

.ticket-list-container .t-tag {
  padding: 8rpx 16rpx;
  font-size: 26rpx;
}

.ticket-list-container .t-button--small {
  height: 56rpx;
  font-size: 26rpx;
  padding: 0 24rpx;
}

.ticket-list-container .t-empty {
  padding: 120rpx 0;
}

.ticket-list-container .t-checkbox-group,
.ticket-list-container .t-radio-group {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.ticket-list-container .t-checkbox,
.ticket-list-container .t-radio {
  padding: 12rpx 0;
}