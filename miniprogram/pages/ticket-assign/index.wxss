/* 工单分配页面样式 */
.assign-container {
  min-height: 100vh;
  background: #f8fafc;
}

/* 统计卡片 */
.stats-section {
  padding: 24rpx 32rpx;
}

.stats-card {
  border-radius: var(--radius-lg);
  padding: 24rpx;
  color: white;
}

.stats-grid {
  display: flex;
  justify-content: space-around;
  align-items: center;
}

.stat-item {
  text-align: center;
  flex: 1;
}

.stat-value {
  font-size: 40rpx;
  font-weight: bold;
  display: block;
  margin-bottom: 8rpx;
}

.stat-label {
  font-size: 24rpx;
  opacity: 0.9;
}

.stat-divider {
  width: 1rpx;
  height: 60rpx;
  background: rgba(255, 255, 255, 0.3);
}

/* 快速操作 */
.quick-actions {
  display: flex;
  gap: 16rpx;
  padding: 0 32rpx 24rpx;
}

.quick-actions .t-button {
  flex: 1;
}

/* 工单列表 */
.ticket-list {
  padding: 24rpx 32rpx;
}

.ticket-card {
  background: white;
  border-radius: var(--radius-lg);
  padding: 24rpx;
  margin-bottom: 24rpx;
  box-shadow: var(--shadow-light);
  position: relative;
}

.ticket-card.urgent {
  border-left: 6rpx solid #ef4444;
}

.ticket-card.assigning {
  background: linear-gradient(to right, #fef3c7, white);
}

.ticket-card.assigned {
  background: linear-gradient(to right, #dcfce7, white);
}

/* 卡片头部 */
.card-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.ticket-info {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.ticket-no {
  font-size: 32rpx;
  font-weight: 600;
  color: #111827;
}

.create-time {
  font-size: 26rpx;
  color: #6b7280;
}

/* 卡片内容 */
.card-content {
  margin-bottom: 20rpx;
}

.content-row {
  display: flex;
  align-items: center;
  gap: 12rpx;
  margin-bottom: 12rpx;
}

.content-text {
  font-size: 28rpx;
  color: #374151;
  flex: 1;
}

.description {
  margin-top: 16rpx;
  padding-top: 16rpx;
  border-top: 1rpx solid #f3f4f6;
}

.desc-label {
  font-size: 26rpx;
  color: #6b7280;
  display: block;
  margin-bottom: 8rpx;
}

.desc-text {
  font-size: 28rpx;
  color: #374151;
  line-height: 1.5;
}

/* 工程师选择 */
.engineer-section {
  margin: 20rpx 0;
  padding: 20rpx 0;
  border-top: 1rpx solid #f3f4f6;
  border-bottom: 1rpx solid #f3f4f6;
}

.section-title {
  font-size: 28rpx;
  font-weight: 500;
  color: #374151;
  margin-bottom: 16rpx;
}

.engineer-scroll {
  width: 100%;
  height: 180rpx;
}

.engineer-list {
  display: flex;
  gap: 16rpx;
  padding-right: 24rpx;
}

.engineer-item {
  min-width: 160rpx;
  padding: 16rpx;
  background: #f9fafb;
  border-radius: var(--radius-md);
  border: 2rpx solid transparent;
  display: flex;
  flex-direction: column;
  align-items: center;
  transition: all 0.3s;
}

.engineer-item.selected {
  background: var(--light-blue-50);
  border-color: var(--primary-color);
}

.engineer-avatar {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  background: #e5e7eb;
  margin-bottom: 8rpx;
}

.engineer-name {
  font-size: 26rpx;
  font-weight: 500;
  color: #111827;
  margin-bottom: 8rpx;
}

.engineer-status {
  display: flex;
  align-items: center;
  gap: 8rpx;
  margin-bottom: 8rpx;
}

.status-dot {
  width: 12rpx;
  height: 12rpx;
  border-radius: 50%;
}

.status-dot.online {
  background: #10b981;
}

.status-dot.busy {
  background: #f59e0b;
}

.status-dot.offline {
  background: #6b7280;
}

.task-count {
  font-size: 22rpx;
  color: #6b7280;
}

.engineer-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 8rpx;
  justify-content: center;
}

/* 卡片操作 */
.card-actions {
  display: flex;
  gap: 16rpx;
  margin-top: 20rpx;
}

.card-actions .t-button {
  flex: 1;
}

/* 分配信息 */
.assign-info {
  display: flex;
  align-items: center;
  gap: 16rpx;
  margin-bottom: 16rpx;
}

.info-label {
  font-size: 28rpx;
  color: #6b7280;
}

.engineer-info {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.small-avatar {
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
  background: #e5e7eb;
}

.assign-progress {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.progress-label {
  font-size: 26rpx;
  color: #6b7280;
}

.progress-time {
  font-size: 26rpx;
  color: #f59e0b;
  font-weight: 500;
}

.timeline-info {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.time-item {
  font-size: 26rpx;
  color: #6b7280;
}

/* 智能分配弹窗 */
.auto-assign-dialog {
  background: white;
  border-radius: var(--radius-lg) var(--radius-lg) 0 0;
  max-height: 80vh;
  display: flex;
  flex-direction: column;
}

.dialog-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 32rpx;
  border-bottom: 1rpx solid #e5e7eb;
}

.dialog-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #111827;
}

.dialog-content {
  flex: 1;
  padding: 32rpx;
  overflow-y: auto;
}

.setting-item {
  margin-bottom: 32rpx;
}

.setting-label {
  font-size: 30rpx;
  font-weight: 500;
  color: #374151;
  display: block;
  margin-bottom: 16rpx;
}

.setting-hint {
  font-size: 24rpx;
  color: #9ca3af;
  margin-left: 80rpx;
  margin-top: 8rpx;
}

.preview-section {
  background: #f9fafb;
  border-radius: var(--radius-md);
  padding: 20rpx;
  margin-top: 32rpx;
}

.preview-title {
  font-size: 28rpx;
  font-weight: 500;
  color: #374151;
  display: block;
  margin-bottom: 16rpx;
}

.preview-list {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.preview-item {
  display: flex;
  align-items: center;
  gap: 12rpx;
  padding: 12rpx;
  background: white;
  border-radius: var(--radius-sm);
}

.preview-ticket {
  font-size: 26rpx;
  color: #374151;
  flex: 1;
}

.preview-engineer {
  font-size: 26rpx;
  color: var(--primary-color);
  font-weight: 500;
}

.dialog-actions {
  display: flex;
  gap: 24rpx;
  padding: 32rpx;
  border-top: 1rpx solid #e5e7eb;
}

.dialog-actions .t-button {
  flex: 1;
}

/* 筛选弹窗 */
.filter-dialog {
  background: white;
  border-radius: var(--radius-lg) var(--radius-lg) 0 0;
  max-height: 70vh;
  display: flex;
  flex-direction: column;
}

.filter-group {
  margin-bottom: 32rpx;
}

.filter-label {
  font-size: 30rpx;
  font-weight: 500;
  color: #374151;
  display: block;
  margin-bottom: 16rpx;
}

/* TDesign组件样式覆盖 */
.assign-container .t-navbar {
  background: var(--primary-color);
}

.assign-container .t-navbar__left,
.assign-container .t-navbar__center {
  color: white;
}

.assign-container .t-tabs {
  background: white;
}

.assign-container .t-tab-panel__content {
  background: #f8fafc;
  min-height: calc(100vh - 400rpx);
}

.assign-container .t-tag {
  padding: 4rpx 12rpx;
}

.assign-container .t-button--small {
  height: 56rpx;
  font-size: 26rpx;
  padding: 0 20rpx;
}

.assign-container .t-button--medium {
  height: 72rpx;
  font-size: 28rpx;
}

.assign-container .t-checkbox-group,
.assign-container .t-radio-group {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
}

.assign-container .t-checkbox,
.assign-container .t-radio {
  margin-right: 32rpx;
}

.assign-container .t-switch {
  position: absolute;
  right: 32rpx;
  top: 0;
}

.assign-container .t-empty {
  padding: 120rpx 0;
}

/* 渐变背景 */
.gradient-bg {
  background: linear-gradient(135deg, var(--primary-color), #06b6d4);
}