/* 测试页面样式 */
.test-container {
  padding: 20rpx;
  background: #f5f5f5;
  min-height: 100vh;
}

/* 页面标题 */
.page-header {
  background: white;
  padding: 30rpx;
  border-radius: 16rpx;
  margin-bottom: 20rpx;
}

.page-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  display: block;
  margin-bottom: 10rpx;
}

.page-desc {
  font-size: 28rpx;
  color: #666;
}

/* 测试控制 */
.test-control {
  display: flex;
  gap: 20rpx;
  margin-bottom: 20rpx;
}

.test-btn {
  flex: 1;
  height: 88rpx;
  line-height: 88rpx;
  border-radius: 12rpx;
  font-size: 30rpx;
  border: none;
}

.test-btn.primary {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
}

.test-btn.danger {
  background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
  color: white;
}

.test-btn[disabled] {
  opacity: 0.5;
}

/* 当前测试状态 */
.current-test {
  background: white;
  padding: 20rpx 30rpx;
  border-radius: 12rpx;
  margin-bottom: 20rpx;
  display: flex;
  align-items: center;
}

.test-label {
  color: #666;
  margin-right: 10rpx;
}

.test-name {
  color: #333;
  font-weight: bold;
}

/* 工单信息 */
.ticket-info {
  background: #e8f5e9;
  padding: 20rpx 30rpx;
  border-radius: 12rpx;
  margin-bottom: 20rpx;
  display: flex;
  align-items: center;
}

.info-label {
  color: #2e7d32;
  margin-right: 10rpx;
}

.info-value {
  color: #1b5e20;
  font-size: 24rpx;
  font-family: monospace;
}

/* 测试结果 */
.test-results {
  background: white;
  padding: 30rpx;
  border-radius: 16rpx;
  margin-bottom: 20rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
  padding-bottom: 10rpx;
  border-bottom: 2rpx solid #eee;
}

.result-list {
  max-height: 400rpx;
  overflow-y: auto;
}

.result-item {
  padding: 15rpx;
  margin-bottom: 10rpx;
  border-radius: 8rpx;
  font-size: 26rpx;
}

.result-item.success {
  background: #e8f5e9;
  color: #2e7d32;
}

.result-item.error {
  background: #ffebee;
  color: #c62828;
}

.result-item.warning {
  background: #fff3e0;
  color: #ef6c00;
}

.result-item.info {
  background: #e3f2fd;
  color: #1565c0;
}

.result-time {
  font-size: 24rpx;
  opacity: 0.7;
  margin-right: 10rpx;
}

.result-message {
  white-space: pre-wrap;
}

/* 处理历史 */
.process-history {
  background: white;
  padding: 30rpx;
  border-radius: 16rpx;
}

.history-timeline {
  margin-top: 20rpx;
}

.history-item {
  display: flex;
  padding-bottom: 30rpx;
}

.timeline-left {
  width: 60rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.timeline-dot {
  width: 24rpx;
  height: 24rpx;
  border-radius: 50%;
  background: #999;
  flex-shrink: 0;
}

.timeline-dot.created {
  background: #4caf50;
}

.timeline-dot.accepted {
  background: #2196f3;
}

.timeline-dot.rejected {
  background: #f44336;
}

.timeline-dot.paused {
  background: #ff9800;
}

.timeline-dot.processing {
  background: #03a9f4;
}

.timeline-dot.resolved {
  background: #8bc34a;
}

.timeline-line {
  width: 2rpx;
  flex: 1;
  background: #e0e0e0;
  margin-top: 10rpx;
}

.history-content {
  flex: 1;
  padding-left: 20rpx;
}

.history-header {
  display: flex;
  justify-content: space-between;
  margin-bottom: 10rpx;
}

.history-action {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
}

.history-time {
  font-size: 24rpx;
  color: #999;
}

.history-details {
  display: flex;
  flex-direction: column;
  gap: 5rpx;
}

.detail-item {
  font-size: 24rpx;
  color: #666;
}

/* 退回原因突出显示 */
.reject-reason {
  margin-top: 15rpx;
  padding: 20rpx;
  background: #fef2f2;
  border-left: 4rpx solid #ef4444;
  border-radius: 8rpx;
}

.reason-label {
  font-weight: 600;
  color: #dc2626;
  margin-bottom: 10rpx;
  display: block;
}

.reason-text {
  color: #7f1d1d;
  line-height: 1.5;
  font-size: 26rpx;
}

/* 解决方案 */
.solution-box {
  margin-top: 15rpx;
  padding: 20rpx;
  background: #f0fdf4;
  border-left: 4rpx solid #10b981;
  border-radius: 8rpx;
}

.solution-label {
  font-weight: 600;
  color: #059669;
  margin-bottom: 10rpx;
  display: block;
}

.solution-text {
  color: #064e3b;
  line-height: 1.5;
  font-size: 26rpx;
}

/* 提示信息 */
.tips {
  background: white;
  padding: 30rpx;
  border-radius: 16rpx;
}

.tip-title {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  display: block;
  margin-bottom: 20rpx;
}

.tip-item {
  font-size: 26rpx;
  color: #666;
  display: block;
  margin-bottom: 10rpx;
  padding-left: 20rpx;
}