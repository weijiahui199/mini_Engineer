/* CSSå˜é‡å®šä¹‰ */
page {
  --primary-color: #0ea5e9;
  
  --light-blue-50: #f0f9ff;
  --light-blue-100: #e0f2fe;
  --light-blue-200: #bae6fd;
  --light-blue-300: #7dd3fc;
  --light-blue-400: #38bdf8;
  --light-blue-500: #0ea5e9;
  --light-blue-600: #0284c7;
  --light-blue-700: #0369a1;
  --light-blue-800: #075985;
  --light-blue-900: #0c4a6e;
  
  --status-pending: #fef3c7;
  --status-pending-text: #92400e;
  --status-processing: #dbeafe;
  --status-processing-text: #1e40af;
  --status-resolved: #d1fae5;
  --status-resolved-text: #065f46;
  --status-cancelled: #fee2e2;
  --status-cancelled-text: #991b1b;
  
  --priority-urgent: #ff4d4f;
  --priority-high: #faad14;
  --priority-medium: #1890ff;
  --priority-low: #52c41a;
  
  --spacing-1: 8rpx;
  --spacing-2: 16rpx;
  --spacing-3: 24rpx;
  --spacing-4: 32rpx;
  --spacing-5: 40rpx;
  --spacing-6: 48rpx;
  
  --radius-sm: 8rpx;
  --radius-md: 16rpx;
  --radius-lg: 24rpx;
  --radius-xl: 32rpx;
  
  --shadow-light: 0 2rpx 8rpx rgba(0, 0, 0, 0.06);
  --shadow-standard: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
  --shadow-elevated: 0 6rpx 24rpx rgba(0, 0, 0, 0.12);
  --shadow-brand: 0 8rpx 32rpx rgba(14, 165, 233, 0.2);
  
  background: #f8fafc;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'PingFang SC', 'Hiragino Sans GB', 'Microsoft YaHei', sans-serif;
}

/* å®¹å™¨æ ·å¼ */
.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  box-sizing: border-box;
}

/* é¡µé¢å®¹å™¨ */
.page-container {
  min-height: 100vh;
  background: #f8fafc;
  padding-bottom: env(safe-area-inset-bottom);
}

/* ç»ç’ƒæ‹Ÿæ€æ•ˆæœ */
.glass-effect {
  background: rgba(255, 255, 255, 0.25);
  backdrop-filter: blur(15px);
  -webkit-backdrop-filter: blur(15px);
  border: 1px solid rgba(255, 255, 255, 0.3);
  box-shadow: var(--shadow-brand);
}

/* æ¸å˜èƒŒæ™¯ */
.gradient-bg {
  background: linear-gradient(135deg, #0ea5e9 0%, #0369a1 100%);
}

/* å¡ç‰‡æ ·å¼ */
.card {
  background: white;
  border-radius: var(--radius-md);
  padding: var(--spacing-4);
  box-shadow: var(--shadow-standard);
  margin-bottom: var(--spacing-3);
}

/* çŠ¶æ€æ ‡ç­¾æ ·å¼ */
.status-tag {
  padding: 4rpx 12rpx;
  border-radius: 8rpx;
  font-size: 24rpx;
  display: inline-block;
}

.status-tag--pending {
  background: var(--status-pending);
  color: var(--status-pending-text);
}

.status-tag--processing {
  background: var(--status-processing);
  color: var(--status-processing-text);
}

.status-tag--resolved {
  background: var(--status-resolved);
  color: var(--status-resolved-text);
}

.status-tag--cancelled {
  background: var(--status-cancelled);
  color: var(--status-cancelled-text);
}

/* ä¼˜å…ˆçº§æ ·å¼ */
.priority-dot {
  width: 8rpx;
  height: 8rpx;
  border-radius: 50%;
  display: inline-block;
  margin-right: 8rpx;
}

.priority-urgent { background-color: var(--priority-urgent); }
.priority-high { background-color: var(--priority-high); }
.priority-medium { background-color: var(--priority-medium); }
.priority-low { background-color: var(--priority-low); }

/* æŒ‰é’®é‡ç½® */
button {
  background: initial;
}

button:focus {
  outline: 0;
}

button::after {
  border: none;
}

/* TDesignç»„ä»¶æ ·å¼è¦†ç›– */
.t-button--primary {
  background-color: var(--primary-color) !important;
  border-color: var(--primary-color) !important;
}

.t-tag--primary {
  background-color: var(--light-blue-100) !important;
  color: var(--primary-color) !important;
  border-color: var(--light-blue-200) !important;
}

/* åŠ¨ç”»æ•ˆæœ */
@keyframes fadeIn {
  from {
    opacity: 0;
    transform: translateY(10rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

@keyframes slideInRight {
  from {
    transform: translateX(100%);
  }
  to {
    transform: translateX(0);
  }
}

@keyframes spin {
  from {
    transform: rotate(0deg);
  }
  to {
    transform: rotate(360deg);
  }
}

.fade-in {
  animation: fadeIn 0.3s ease-out;
}

.slide-in {
  animation: slideInRight 0.3s ease-out;
}

/* å·¥å…·ç±» */
.text-primary { color: var(--primary-color); }
.bg-light-blue { background-color: var(--light-blue-50); }
.shadow-card { box-shadow: var(--shadow-standard); }
.radius-md { border-radius: var(--radius-md); }

