/* 耗材列表页 - 简化优化后的样式 */

/* CSS变量定义 - 根据UI规范 */
page {
  /* 颜色Token */
  --brand-primary: #5B9FE6;
  --brand-secondary: #4A8DD4;
  --text-primary: rgba(0,0,0,0.9);
  --text-secondary: rgba(0,0,0,0.6);
  --text-tertiary: rgba(0,0,0,0.4);
  --line-divider: rgba(0,0,0,0.08);
  --bg-page: #F7F8FA;
  --bg-card: #FFFFFF;
  --state-success: #07C160;
  --state-warning: #FAAD14;
  --state-error: #FA5151;
  
  /* 尺寸 */
  --safe-area-bottom: env(safe-area-inset-bottom);
  --page-padding: 32rpx;
  --card-padding: 32rpx;
  --card-gap: 16rpx;
  
  /* 圆角 */
  --radius-xs: 8rpx;
  --radius-sm: 12rpx;
  --radius-md: 16rpx;
  --radius-lg: 24rpx;
  
  /* 阴影 */
  --shadow-card: 0 4rpx 16rpx rgba(0,0,0,0.08);
  --shadow-float: 0 8rpx 24rpx rgba(0,0,0,0.12);
  
  height: 100%;
  background: var(--bg-page);
}

/* 容器 */
.container {
  height: 100vh;
  display: flex;
  flex-direction: column;
  background: var(--bg-page);
}

/* 搜索栏 - 圆角设计和阴影 */
.search-bar {
  background: var(--bg-card);
  flex-shrink: 0;
  width: 100%;
  padding-top: 16rpx; /* 与导航栏的间距 */
  padding-bottom: 16rpx; /* 与主内容的间距 */
  box-shadow: 0 2rpx 12rpx rgba(0,0,0,0.06);
  position: relative;
  z-index: 3;
}

/* TDesign搜索框圆角覆盖 */
.search-bar .t-search {
  border-radius: 44rpx !important;
  background: var(--bg-page) !important;
  margin: 0 var(--page-padding);
  width: calc(100% - 64rpx);
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.04);
}

.search-bar .t-search__input-container {
  border-radius: 44rpx !important;
  height: 88rpx !important;
}

/* 主体内容 */
.main-content {
  flex: 1;
  display: flex;
  overflow: hidden;
  width: 100%;
  position: relative;
  margin-top: 8rpx; /* 与搜索栏的额外间距 */
}

/* 侧边栏容器 */
.sidebar-wrapper {
  width: 160rpx;
  flex-shrink: 0;
  background: var(--bg-card);
  border-right: 1rpx solid var(--line-divider);
  box-shadow: 2rpx 0 8rpx rgba(0,0,0,0.04);
  position: relative;
  z-index: 2;
  display: flex;
  flex-direction: column;
  height: 100%;
}

/* TDesign侧边栏样式覆盖 */
.sidebar-wrapper .t-side-bar {
  flex: 1;
  width: 100% !important;
}

/* 侧边栏项目样式 */
.t-side-bar-item {
  min-height: 96rpx !important;
  font-size: 28rpx !important;
  color: var(--text-secondary) !important;
}

.t-side-bar-item--active {
  color: var(--brand-primary) !important;
  font-weight: 500 !important;
  background: var(--bg-page) !important;  /* 改为页面背景色 #F7F8FA */
  position: relative;
}

/* 选中项的左侧指示条 */
.t-side-bar-item--active::before {
  content: '';
  position: absolute;
  left: 0;
  top: 50%;
  transform: translateY(-50%);
  width: 4rpx;
  height: 60%;
  background: var(--brand-primary);
  border-radius: 0 4rpx 4rpx 0;
}

/* 产品列表 */
.product-list {
  flex: 1;
  height: 100%;
  background: var(--bg-page);
  width: calc(100% - 160rpx);
  box-sizing: border-box;
  border-left: 1rpx solid var(--line-divider);
}

/* 产品列表内容容器 */
.product-list-content {
  padding: var(--page-padding);
  padding-bottom: calc(120rpx + var(--safe-area-bottom));
  width: 100%;
  box-sizing: border-box;
}

/* 产品卡片 - 重新布局 */
.product-card {
  background: var(--bg-card);
  border-radius: var(--radius-md);
  padding: 24rpx;  /* 减小内边距 */
  padding-bottom: 80rpx;  /* 为步进器留出空间 */
  margin-bottom: var(--card-gap);
  box-shadow: var(--shadow-card);
  position: relative;
  transition: all 0.2s cubic-bezier(0.2,0,0,1);
  min-height: 100rpx;  /* 降低最小高度 */
  max-height: 280rpx;  /* 调整最大高度 */
  width: 100%;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
}

.product-card:active {
  transform: scale(0.98);
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.12);
}

/* 缺货警示条 */
.stock-alert {
  position: absolute;
  left: 0;
  top: 0;
  bottom: 0;
  width: 6rpx;
  background: var(--state-error);
  border-radius: var(--radius-md) 0 0 var(--radius-md);
}

/* 库存标识容器 - 右上角 */
.stock-badge-wrapper {
  position: absolute;
  top: 24rpx;
  right: 24rpx;
  z-index: 2;
}

/* 产品主体内容 */
.product-main {
  display: flex;
  align-items: flex-start;
  padding-bottom: 60rpx;  /* 为固定的操作按钮预留空间 */
}

/* 产品图片 */
.product-image {
  width: 200rpx;  /* 进一步放大图片 */
  height: 200rpx;  /* 进一步放大图片 */
  border-radius: var(--radius-md);
  margin-right: 24rpx;
  flex-shrink: 0;
  background: var(--bg-page);
  object-fit: cover;
}

.product-image.placeholder {
  display: flex;
  align-items: center;
  justify-content: center;
  background: linear-gradient(135deg, rgba(91,159,230,0.08) 0%, rgba(91,159,230,0.12) 100%);
  color: var(--brand-primary);
  font-size: 48rpx;  /* 放大占位文字 */
  font-weight: 600;
}

/* 产品信息 */
.product-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
  min-width: 0;
  padding-right: 80rpx; /* 为右上角标签留更多空间 */
  margin-bottom: 8rpx; /* 与操作区保持间距 */
}

.product-name {
  font-size: 32rpx;
  font-weight: 500;
  color: var(--text-primary);
  line-height: 48rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.product-desc {
  font-size: 24rpx;  /* 缩小字体 */
  color: var(--text-tertiary);  /* 使用更淡的颜色 */
  line-height: 36rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}


.product-stock {
  font-size: 24rpx;
  color: var(--text-tertiary);
  line-height: 36rpx;
}

/* 操作区 - 固定在右下角 */
.product-action {
  position: absolute;  /* 绝对定位 */
  bottom: 24rpx;  /* 距离底部24rpx */
  right: 24rpx;  /* 距离右侧24rpx */
  display: flex;
  justify-content: flex-end;
  align-items: center;
  z-index: 3;  /* 确保在其他内容之上 */
}

/* 加载容器 */
.loading-container {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 80rpx 0;
  width: 100%;
}

/* 空状态容器 */
.empty-container {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 120rpx 40rpx;
  width: 100%;
}

/* 浮动购物车按钮 */
.float-cart {
  position: fixed;
  right: var(--page-padding);
  bottom: calc(40rpx + var(--safe-area-bottom));
  width: 112rpx;
  height: 112rpx;
  background: var(--brand-primary);
  border-radius: 56rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: var(--shadow-float);
  transition: all 0.24s cubic-bezier(0.2,0,0,1);
  z-index: 99;
  color: #FFFFFF;
}

.float-cart:active {
  transform: scale(0.92);
  box-shadow: 0 4rpx 16rpx rgba(91,159,230,0.4);
}

/* 添加类目按钮 - 侧边栏底部 */
.add-category-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 8rpx;
  padding: 20rpx;
  border-top: 1rpx solid var(--line-divider);
  background: var(--bg-page);
  color: var(--text-secondary);
  font-size: 24rpx;
  transition: all 0.2s cubic-bezier(0.2,0,0,1);
}

.add-category-btn:active {
  background: rgba(91,159,230,0.08);
  color: var(--brand-primary);
}

/* 添加产品卡片 - 产品列表底部 */
.add-product-card {
  background: var(--bg-card);
  border-radius: var(--radius-md);
  padding: 48rpx;
  margin-bottom: var(--card-gap);
  box-shadow: var(--shadow-card);
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  gap: 16rpx;
  border: 2rpx dashed var(--line-divider);
  transition: all 0.2s cubic-bezier(0.2,0,0,1);
  cursor: pointer;
}

.add-product-card:active {
  transform: scale(0.98);
  background: var(--bg-page);
}

.add-product-text {
  font-size: 28rpx;
  color: var(--text-secondary);
}

/* TDesign步进器样式覆盖 - 缩小尺寸 */
.product-card .t-stepper {
  --td-stepper-input-width: 40rpx !important;  /* 输入框宽度改为40rpx */
  --td-stepper-button-small-size: 40rpx !important;  /* 缩小按钮 */
  --td-stepper-input-font-size: 24rpx !important;  /* 缩小字体 */
  transform: scale(0.9);  /* 整体缩小 */
  transform-origin: right center;
}

/* 选规格按钮样式 - 白色文字，缩小尺寸 */
.product-card .t-button {
  background: var(--brand-primary) !important;
  color: #FFFFFF !important;
  border: none !important;
  height: 48rpx !important;  /* 进一步缩小高度 */
  padding: 0 16rpx !important;  /* 进一步缩小内边距 */
  font-size: 22rpx !important;  /* 进一步缩小字体 */
  border-radius: var(--radius-sm) !important;
  min-width: 90rpx !important;  /* 缩小最小宽度 */
  line-height: 48rpx !important;  /* 设置行高与按钮高度一致 */
}

.product-card .t-button:active {
  background: var(--brand-secondary) !important;
}

/* 响应式适配 */
@media (max-width: 375px) {
  .product-card {
    padding: 20rpx;
  }
  
  .product-image {
    width: 90rpx;
    height: 90rpx;
  }
  
  .product-name {
    font-size: 28rpx;
  }
  
  .sidebar-wrapper {
    width: 140rpx;
  }
  
  .product-list {
    width: calc(100% - 140rpx);
  }
}

/* 浮动购物车按钮 */
.float-cart {
  position: fixed;
  right: 32rpx;
  bottom: 120rpx;
  width: 96rpx;
  height: 96rpx;
  background: var(--brand-primary, #5B9FE6);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.12);
  z-index: 99;
}

.cart-icon {
  width: 48rpx;
  height: 48rpx;
}

.add-icon {
  width: 32rpx;
  height: 32rpx;
  margin-right: 8rpx;
}

.add-product-icon {
  width: 48rpx;
  height: 48rpx;
  margin-bottom: 8rpx;
}

/* 操作区样式 */
.product-action {
  position: absolute;
  right: 20rpx;
  bottom: 16rpx;
  z-index: 2;
  /* 增加点击区域 */
  padding: 16rpx;
  margin: -16rpx;
}

/* 产品卡片点击效果 */
.product-card:active {
  transform: scale(0.98);
  opacity: 0.95;
  transition: all 0.1s ease;
}

/* 增大步进器点击区域 - 大幅增加尺寸避免误触 */
.product-action t-stepper {
  --td-stepper-input-width: 60rpx !important;  /* 减小输入框宽度 */
  --td-stepper-button-small-width: 64rpx !important;
  --td-stepper-button-small-height: 64rpx !important;
  --td-stepper-button-font-size: 36rpx !important;
  --td-stepper-input-font-size: 28rpx !important;
  transform: scale(1.2);
  transform-origin: right bottom;
}