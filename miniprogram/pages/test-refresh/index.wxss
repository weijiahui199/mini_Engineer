/* 测试页面样式 */
.container {
  padding: 20rpx;
  background: #f5f5f5;
  min-height: 100vh;
}

.header {
  background: white;
  padding: 30rpx;
  border-radius: 16rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.1);
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  display: block;
  margin-bottom: 10rpx;
}

.subtitle {
  font-size: 28rpx;
  color: #666;
}

.section {
  background: white;
  padding: 30rpx;
  border-radius: 16rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.1);
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #eee;
}

.info-card {
  padding: 20rpx 0;
}

.info-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 10rpx 0;
}

.label {
  font-size: 28rpx;
  color: #666;
}

.value {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
}

.value.success {
  color: #52c41a;
}

.value.error {
  color: #ff4d4f;
}

.button-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 20rpx;
}

.test-btn {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  border: none;
  border-radius: 12rpx;
  padding: 20rpx;
  font-size: 28rpx;
  font-weight: 500;
}

.test-btn.warning {
  background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
}

.test-btn::after {
  border: none;
}

.results-list {
  max-height: 600rpx;
  overflow-y: auto;
}

.result-item {
  background: #f8f8f8;
  padding: 20rpx;
  border-radius: 12rpx;
  margin-bottom: 15rpx;
}

.result-header {
  display: flex;
  justify-content: space-between;
  margin-bottom: 10rpx;
}

.result-time {
  font-size: 24rpx;
  color: #999;
}

.result-message {
  font-size: 26rpx;
  color: #333;
  font-weight: 500;
}

.result-detail {
  font-size: 24rpx;
  color: #666;
  word-break: break-all;
}

.float-btn {
  position: fixed;
  right: 30rpx;
  bottom: 100rpx;
  width: 100rpx;
  height: 100rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 12rpx rgba(102, 126, 234, 0.4);
}

.float-btn text {
  color: white;
  font-size: 28rpx;
  font-weight: bold;
}