/* 耗材列表页样式 */
.container {
  width: 100%;
  height: 100vh;
  background: #f3f3f3;
  display: flex;
  flex-direction: column;
}

/* 顶部导航栏 - 两行布局，完全避开 Dynamic Island */
.navbar {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  background: white;
  border-bottom: 1rpx solid #e7e7e7;
  z-index: 100;
  /* Dynamic Island 下方开始布局 */
  padding-top: calc(env(safe-area-inset-top) + 60rpx);
}

/* 第一行：标题栏 */
.navbar-header {
  height: 80rpx;
  display: flex;
  align-items: center;
  padding: 0 32rpx;
}

/* 第二行：搜索栏 */
.navbar-search {
  padding: 0 32rpx 20rpx;
}

.search-bar {
  height: 72rpx;
  background: #f5f5f5;
  border-radius: 36rpx;
  display: flex;
  align-items: center;
  padding: 0 24rpx;
}

.search-placeholder {
  flex: 1;
  font-size: 28rpx;
  color: #999;
  margin-left: 12rpx;
}

.navbar-left {
  display: flex;
  align-items: center;
}

.nav-icon {
  width: 48rpx;
  height: 48rpx;
  margin-right: 24rpx;
}

.nav-title {
  font-size: 36rpx;
  font-weight: 500;
  color: #333;
}

.search-icon {
  width: 32rpx;
  height: 32rpx;
}

/* 主体内容 */
.main-content {
  position: fixed;
  top: calc(232rpx + env(safe-area-inset-top)); /* 导航栏下方 */
  bottom: calc(120rpx + env(safe-area-inset-bottom)); /* 底部栏上方，考虑安全区域 */
  left: 0;
  right: 0;
  display: flex;
  flex-direction: row;
  background: #f3f3f3;
}

/* 左侧类目导航 */
.category-sidebar {
  width: 140rpx;
  height: 100%;
  background: white;
  border-right: 1rpx solid #e7e7e7;
  overflow-y: auto;
}

.category-item {
  padding: 20rpx 16rpx;
  text-align: center;
  position: relative;
  transition: all 0.3s;
  width: 140rpx; /* 固定宽度 */
  box-sizing: border-box; /* 包含padding和border */
}

.category-item.active {
  background: linear-gradient(90deg, #f0f6ff 0%, #e8f2ff 100%);
  color: #0052d9;
  font-weight: 600;
}

.category-item.active::after {
  content: '';
  position: absolute;
  right: 0;
  top: 50%;
  transform: translateY(-50%);
  width: 6rpx;
  height: 48rpx;
  background: #0052d9;
  border-radius: 4rpx 0 0 4rpx;
  box-shadow: 0 0 8rpx rgba(0, 82, 217, 0.3);
}

.category-name {
  font-size: 26rpx;
  color: inherit;
  word-break: keep-all; /* 防止文字换行 */
  white-space: nowrap; /* 不换行 */
}

.add-category-btn {
  padding: 16rpx;
  text-align: center;
  font-size: 24rpx;
  color: #666;
  background: #f5f5f5;
  border-top: 1rpx solid #e7e7e7;
  width: 140rpx; /* 固定宽度 */
  box-sizing: border-box;
}

/* 右侧产品列表 */
.product-list {
  flex: 1;
  height: 100%;
  background: white;
  overflow-y: auto;
  overflow-x: hidden;
}

/* 产品列表容器 */
.product-list-container {
  padding: 24rpx;
  width: 100%;
  min-height: 100%;
  box-sizing: border-box;
}

/* 产品卡片 */
.product-card {
  background: white;
  border-radius: 16rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.08), 0 2rpx 4rpx rgba(0,0,0,0.04);
  position: relative;
  transition: all 0.3s;
  display: flex;
  flex-direction: row;
  overflow: hidden;
}

.product-card:active {
  transform: scale(0.98);
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.06), 0 1rpx 2rpx rgba(0,0,0,0.03);
}

/* 产品图片容器 */
.product-image-wrapper {
  width: 120rpx;
  height: 120rpx;
  flex-shrink: 0;
  margin: 20rpx;
}

/* 产品图片 */
.product-image {
  width: 100%;
  height: 100%;
  border-radius: 12rpx;
  background: #f5f5f5;
}

/* 产品图片占位符 */
.product-image-placeholder {
  width: 100%;
  height: 100%;
  border-radius: 12rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  display: flex;
  align-items: center;
  justify-content: center;
}

.placeholder-text {
  color: white;
  font-size: 36rpx;
  font-weight: bold;
  text-transform: uppercase;
}

/* 产品内容区域 */
.product-content {
  flex: 1;
  padding: 20rpx 20rpx 20rpx 0;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  min-height: 120rpx;
}

.stock-alert-bar {
  position: absolute;
  left: 0;
  top: 0;
  bottom: 0;
  width: 8rpx;
  background: #e34d59;
  border-radius: 16rpx 0 0 16rpx;
}

.product-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 16rpx;
}

.product-info {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.product-name {
  font-size: 30rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 6rpx;
  /* 文字截断 */
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
}

.product-spec {
  font-size: 24rpx;
  color: #999;
  /* 两行截断 */
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

/* 库存状态标签 */
.stock-badge {
  padding: 4rpx 12rpx;
  border-radius: 8rpx;
  font-size: 22rpx;
  font-weight: 500;
  height: fit-content;
}

.stock-normal {
  background: #e3f9e9;
  color: #00a870;
}

.stock-warning {
  background: #fff5ed;
  color: #ed7b2f;
}

.stock-danger {
  background: #fef1f1;
  color: #e34d59;
}

.product-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.product-price-info {
  display: flex;
  flex-direction: column;
}

.product-price {
  font-size: 36rpx;
  font-weight: 600;
  color: #0052d9;
  margin-bottom: 8rpx;
}

.product-stock {
  font-size: 24rpx;
  color: #999;
}

/* Engineer角色看到的库存信息（更大） */
.product-stock-large {
  font-size: 32rpx;
  font-weight: 500;
  color: #666;
}

/* 数量步进器 */
.quantity-stepper {
  display: flex;
  align-items: center;
}

.stepper-btn {
  width: 48rpx;
  height: 48rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #f5f5f5;
  border: none;
  padding: 0;
  transition: all 0.2s;
  /* 增加点击区域 */
  position: relative;
}

.stepper-btn::after {
  content: '';
  position: absolute;
  top: -8rpx;
  right: -8rpx;
  bottom: -8rpx;
  left: -8rpx;
}

.stepper-btn.plus {
  background: #0052d9;
}

.stepper-btn:active {
  transform: scale(0.9);
}

.stepper-btn.disabled {
  opacity: 0.5;
}

.stepper-icon {
  width: 24rpx;
  height: 24rpx;
}

.stepper-btn.plus .stepper-icon {
  filter: brightness(0) invert(1);
}

.quantity-input {
  width: 60rpx;
  text-align: center;
  margin: 0 12rpx;
  font-size: 26rpx;
  font-weight: 500;
}

/* 选规格按钮 */
.select-spec-btn {
  background: #f0f6ff;
  color: #0052d9;
  padding: 8rpx 24rpx;
  border-radius: 24rpx;
  font-size: 24rpx;
  font-weight: 500;
  border: none;
  transition: all 0.2s;
}

.select-spec-btn:active {
  background: #0052d9;
  color: white;
}

/* 添加产品卡片 */
.add-product-card {
  background: white;
  border-radius: 16rpx;
  padding: 48rpx 24rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  border: 2rpx dashed #ddd;
}

.add-icon {
  width: 48rpx;
  height: 48rpx;
  margin-bottom: 16rpx;
  opacity: 0.4;
}

.add-text {
  font-size: 28rpx;
  color: #999;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 0;
  width: 100%;
}

.empty-icon {
  font-size: 120rpx;
  margin-bottom: 32rpx;
  opacity: 0.4;
}

.empty-text {
  font-size: 32rpx;
  color: #666;
  margin-bottom: 16rpx;
}

.empty-hint {
  font-size: 26rpx;
  color: #999;
}

/* 加载状态 */
.loading-state {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 120rpx 0;
  width: 100%;
}

/* 没有更多提示 */
.no-more {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 40rpx 0;
  width: 100%;
}

.no-more-text {
  font-size: 24rpx;
  color: #999;
}

/* 滚动区域底部占位 */
.scroll-bottom-placeholder {
  height: 40rpx;
}

/* 底部栏 */
.bottom-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  min-height: 120rpx;
  background: white;
  border-top: 1rpx solid #e7e7e7;
  box-shadow: 0 -8rpx 24rpx rgba(0,0,0,0.04);
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx 24rpx calc(20rpx + env(safe-area-inset-bottom)) 24rpx;
  z-index: 100;
}

/* 仓库信息 */
.warehouse-info {
  display: flex;
  align-items: center;
}

.info-item {
  display: flex;
  flex-direction: column;
}

.info-label {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 4rpx;
}

.info-value {
  font-size: 28rpx;
  font-weight: 500;
  color: #333;
}

.info-divider {
  width: 1rpx;
  height: 60rpx;
  background: #e7e7e7;
  margin: 0 24rpx;
}

/* 申领车按钮 */
.cart-btn {
  display: flex;
  align-items: center;
  background: linear-gradient(135deg, #3b82f6 0%, #2563eb 100%);
  color: white;
  padding: 16rpx 32rpx;
  border-radius: 50rpx;
  box-shadow: 0 4rpx 12rpx rgba(37, 99, 235, 0.3);
}

.cart-icon-wrapper {
  position: relative;
  margin-right: 16rpx;
}

.cart-icon {
  width: 40rpx;
  height: 40rpx;
  filter: brightness(0) invert(1);
}

.cart-badge {
  position: absolute;
  top: -8rpx;
  right: -8rpx;
  min-width: 32rpx;
  height: 32rpx;
  background: #ef4444;
  color: white;
  font-size: 20rpx;
  font-weight: 500;
  border-radius: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 0 8rpx;
}

.cart-info {
  display: flex;
  flex-direction: column;
}

.cart-count {
  font-size: 24rpx;
  opacity: 0.9;
  margin-bottom: 4rpx;
}

.cart-total {
  font-size: 32rpx;
  font-weight: 600;
}

.cart-action {
  font-size: 28rpx;
  font-weight: 600;
}