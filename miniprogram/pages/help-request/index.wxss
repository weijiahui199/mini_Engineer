/* 求助请求页面样式 */
.help-container {
  min-height: 100vh;
  background: #f8fafc;
}

/* 紧急求助区域 */
.emergency-section {
  padding: 24rpx 32rpx;
}

.emergency-card {
  border-radius: var(--radius-lg);
  padding: 24rpx;
  color: white;
  box-shadow: var(--shadow-elevated);
}

.emergency-content {
  display: flex;
  align-items: center;
  gap: 24rpx;
  margin-bottom: 20rpx;
}

.emergency-info {
  flex: 1;
}

.emergency-title {
  font-size: 36rpx;
  font-weight: 600;
  display: block;
  margin-bottom: 8rpx;
}

.emergency-desc {
  font-size: 28rpx;
  opacity: 0.9;
}

/* 统计数据 */
.stats-section {
  padding: 0 32rpx 24rpx;
}

.stats-grid {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 16rpx;
}

.stat-card {
  background: white;
  border-radius: var(--radius-md);
  padding: 20rpx 16rpx;
  text-align: center;
  box-shadow: var(--shadow-light);
}

.stat-value {
  font-size: 36rpx;
  font-weight: bold;
  color: #111827;
  display: block;
  margin-bottom: 8rpx;
}

.stat-label {
  font-size: 24rpx;
  color: #6b7280;
}

/* 求助列表 */
.help-list {
  padding: 24rpx 32rpx;
}

.help-card {
  background: white;
  border-radius: var(--radius-lg);
  padding: 24rpx;
  margin-bottom: 24rpx;
  box-shadow: var(--shadow-light);
  position: relative;
}

.help-card.urgent {
  border-left: 6rpx solid #ef4444;
}

.help-card.processing {
  background: linear-gradient(to right, #dbeafe, white);
}

.help-card.completed {
  background: linear-gradient(to right, #dcfce7, white);
}

/* 卡片头部 */
.card-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.help-info {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.help-no {
  font-size: 32rpx;
  font-weight: 600;
  color: #111827;
}

.help-time {
  font-size: 26rpx;
  color: #6b7280;
}

/* 请求者信息 */
.requester-info {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.requester-avatar {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  background: #e5e7eb;
}

.requester-details {
  flex: 1;
}

.requester-name {
  font-size: 30rpx;
  font-weight: 500;
  color: #111827;
  display: block;
  margin-bottom: 4rpx;
}

.requester-dept {
  font-size: 26rpx;
  color: #6b7280;
}

.help-meta {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.wait-time {
  font-size: 26rpx;
  color: #f59e0b;
  font-weight: 500;
}

/* 卡片内容 */
.card-content {
  margin-bottom: 20rpx;
}

.ticket-info {
  display: flex;
  align-items: center;
  gap: 12rpx;
  margin-bottom: 12rpx;
}

.info-label {
  font-size: 28rpx;
  color: #6b7280;
}

.ticket-no {
  font-size: 28rpx;
  color: var(--primary-color);
  font-weight: 500;
}

.problem-brief {
  display: flex;
  align-items: center;
  gap: 12rpx;
  margin-bottom: 12rpx;
}

.brief-label {
  font-size: 28rpx;
  color: #6b7280;
}

.brief-text {
  font-size: 28rpx;
  color: #374151;
  font-weight: 500;
}

.problem-desc {
  margin-bottom: 12rpx;
}

.desc-title {
  font-size: 28rpx;
  color: #6b7280;
  display: block;
  margin-bottom: 8rpx;
}

.desc-text {
  font-size: 28rpx;
  color: #374151;
  line-height: 1.5;
}

/* 位置信息 */
.location-info {
  display: flex;
  align-items: center;
  gap: 12rpx;
  padding: 12rpx;
  background: #f9fafb;
  border-radius: var(--radius-sm);
}

.location-text {
  font-size: 26rpx;
  color: #374151;
  flex: 1;
}

.distance-text {
  font-size: 24rpx;
  color: #9ca3af;
}

/* 技能标签 */
.skill-tags {
  display: flex;
  align-items: center;
  gap: 16rpx;
  margin: 16rpx 0;
}

.tags-label {
  font-size: 26rpx;
  color: #6b7280;
}

.tags-list {
  display: flex;
  flex-wrap: wrap;
  gap: 8rpx;
  flex: 1;
}

/* 附件图片 */
.attachments {
  margin: 16rpx 0;
}

.image-scroll {
  width: 100%;
  height: 160rpx;
}

.image-list {
  display: flex;
  gap: 12rpx;
}

.attachment-image {
  width: 140rpx;
  height: 140rpx;
  border-radius: var(--radius-md);
  background: #f3f4f6;
}

/* 协助者信息 */
.helper-section {
  padding: 20rpx 0;
  border-top: 1rpx solid #f3f4f6;
  margin-top: 20rpx;
}

.helper-info {
  display: flex;
  align-items: center;
  gap: 16rpx;
  margin-bottom: 16rpx;
}

.helper-avatar {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  background: #e5e7eb;
}

.helper-details {
  flex: 1;
}

.helper-name {
  font-size: 30rpx;
  font-weight: 500;
  color: #111827;
  display: block;
  margin-bottom: 4rpx;
}

.helper-time {
  font-size: 26rpx;
  color: #6b7280;
}

.helper-actions {
  display: flex;
  gap: 16rpx;
}

/* 参与者信息 */
.participants {
  display: flex;
  align-items: center;
  justify-content: space-around;
  padding: 20rpx;
  background: #f9fafb;
  border-radius: var(--radius-md);
  margin-bottom: 20rpx;
}

.participant-item {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.participant-avatar {
  width: 50rpx;
  height: 50rpx;
  border-radius: 50%;
  background: #e5e7eb;
}

.participant-info {
  text-align: left;
}

.participant-role {
  font-size: 24rpx;
  color: #9ca3af;
  display: block;
  margin-bottom: 4rpx;
}

.participant-name {
  font-size: 26rpx;
  color: #374151;
  font-weight: 500;
}

/* 进度信息 */
.progress-section {
  margin-bottom: 20rpx;
}

.progress-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 12rpx;
}

.progress-label {
  font-size: 28rpx;
  color: #6b7280;
}

.progress-percent {
  font-size: 28rpx;
  color: var(--primary-color);
  font-weight: 500;
}

.progress-desc {
  font-size: 26rpx;
  color: #9ca3af;
  margin-top: 8rpx;
}

/* 沟通摘要 */
.communication-summary {
  padding: 16rpx;
  background: #f9fafb;
  border-radius: var(--radius-md);
  margin-bottom: 20rpx;
}

.summary-header {
  display: flex;
  align-items: center;
  gap: 12rpx;
  margin-bottom: 12rpx;
}

.summary-title {
  font-size: 28rpx;
  color: #6b7280;
}

.message-preview {
  display: flex;
  gap: 8rpx;
}

.message-sender {
  font-size: 26rpx;
  color: #374151;
  font-weight: 500;
}

.message-text {
  font-size: 26rpx;
  color: #6b7280;
  flex: 1;
}

/* 完成信息 */
.completion-info {
  margin-bottom: 20rpx;
}

.info-row {
  display: flex;
  align-items: center;
  padding: 8rpx 0;
}

.info-value {
  font-size: 28rpx;
  color: #374151;
  flex: 1;
}

.solution-summary {
  padding: 16rpx;
  background: #f0f9ff;
  border-radius: var(--radius-md);
  margin-bottom: 20rpx;
}

.summary-label {
  font-size: 28rpx;
  color: #6b7280;
  display: block;
  margin-bottom: 8rpx;
}

.summary-text {
  font-size: 28rpx;
  color: #374151;
  line-height: 1.5;
}

/* 评价信息 */
.rating-section {
  padding: 16rpx;
  background: #fef3c7;
  border-radius: var(--radius-md);
  margin-bottom: 20rpx;
}

.rating-label {
  font-size: 28rpx;
  color: #6b7280;
  display: block;
  margin-bottom: 12rpx;
}

.rating-comment {
  font-size: 26rpx;
  color: #374151;
  display: block;
  margin-top: 12rpx;
  line-height: 1.5;
}

/* 卡片操作 */
.card-actions {
  display: flex;
  gap: 16rpx;
  margin-top: 20rpx;
}

.card-actions .t-button {
  flex: 1;
}

/* 发起求助弹窗 */
.create-help-dialog {
  background: white;
  border-radius: var(--radius-lg) var(--radius-lg) 0 0;
  max-height: 80vh;
  display: flex;
  flex-direction: column;
}

.dialog-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 32rpx;
  border-bottom: 1rpx solid #e5e7eb;
}

.dialog-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #111827;
}

.dialog-content {
  flex: 1;
  padding: 32rpx;
  max-height: 60vh;
}

.form-group {
  margin-bottom: 32rpx;
}

.form-label {
  font-size: 30rpx;
  font-weight: 500;
  color: #374151;
  display: block;
  margin-bottom: 16rpx;
}

.form-label.required::after {
  content: '*';
  color: #ef4444;
  margin-left: 8rpx;
}

/* 图片上传 */
.image-uploader {
  margin-top: 16rpx;
}

.uploaded-images {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}

.uploaded-item {
  position: relative;
  width: 140rpx;
  height: 140rpx;
}

.uploaded-item image {
  width: 100%;
  height: 100%;
  border-radius: var(--radius-md);
  background: #f3f4f6;
}

.uploaded-item .t-icon {
  position: absolute;
  top: -8rpx;
  right: -8rpx;
}

.upload-btn {
  width: 140rpx;
  height: 140rpx;
  border: 2rpx dashed #d1d5db;
  border-radius: var(--radius-md);
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background: #f9fafb;
}

.upload-btn text {
  font-size: 24rpx;
  color: #9ca3af;
  margin-top: 8rpx;
}

/* 技能选择 */
.skill-selector {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}

.dialog-actions {
  display: flex;
  gap: 24rpx;
  padding: 32rpx;
  border-top: 1rpx solid #e5e7eb;
}

.dialog-actions .t-button {
  flex: 1;
}

/* 评价弹窗 */
.rate-dialog {
  background: white;
  border-radius: var(--radius-lg);
  padding: 32rpx;
  width: 600rpx;
}

.rate-section {
  margin-bottom: 32rpx;
  text-align: center;
}

.rate-label {
  font-size: 30rpx;
  color: #374151;
  display: block;
  margin-bottom: 20rpx;
}

.comment-section {
  margin-bottom: 32rpx;
}

.comment-label {
  font-size: 30rpx;
  color: #374151;
  display: block;
  margin-bottom: 16rpx;
}

/* TDesign组件样式覆盖 */
.help-container .t-navbar {
  background: var(--primary-color);
}

.help-container .t-navbar__left,
.help-container .t-navbar__center {
  color: white;
}

.help-container .t-tabs {
  background: white;
}

.help-container .t-tab-panel__content {
  background: #f8fafc;
  min-height: calc(100vh - 400rpx);
}

.help-container .t-tag {
  padding: 4rpx 12rpx;
}

.help-container .t-button--small {
  height: 56rpx;
  font-size: 26rpx;
  padding: 0 20rpx;
}

.help-container .t-button--large {
  height: 80rpx;
  font-size: 30rpx;
}

.help-container .t-radio-group,
.help-container .t-checkbox-group {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
}

.help-container .t-radio,
.help-container .t-checkbox {
  margin-right: 32rpx;
}

.help-container .t-textarea__wrapper {
  min-height: 200rpx;
}

.help-container .t-progress {
  height: 12rpx;
}

.help-container .t-empty {
  padding: 120rpx 0;
}

.help-container .t-fab {
  box-shadow: var(--shadow-elevated);
}

/* 渐变背景 */
.gradient-red {
  background: linear-gradient(135deg, #ef4444, #dc2626);
}

/* 响应式适配 */
@media (max-width: 375px) {
  .stats-grid {
    grid-template-columns: repeat(2, 1fr);
  }
  
  .participants {
    flex-direction: column;
    gap: 16rpx;
  }
}