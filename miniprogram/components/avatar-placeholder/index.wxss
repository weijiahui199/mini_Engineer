/* 头像占位图组件样式 */
.avatar-container {
  position: relative;
  overflow: hidden;
  background: #f0f0f0;
  display: flex;
  align-items: center;
  justify-content: center;
}

.avatar-container.round {
  border-radius: 50%;
}

.avatar-image {
  width: 100%;
  height: 100%;
  transition: opacity 0.3s ease;
}

.avatar-image.loading {
  opacity: 0;
}

.loading-state {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #f5f5f5;
}

.loading-spinner {
  width: 40rpx;
  height: 40rpx;
  border: 3rpx solid #ddd;
  border-top-color: #667eea;
  border-radius: 50%;
  animation: spin 0.8s linear infinite;
}

@keyframes spin {
  0% {
    transform: rotate(0deg);
  }
  100% {
    transform: rotate(360deg);
  }
}

.error-state {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #f8f8f8;
}

.error-icon {
  width: 50%;
  height: 50%;
  opacity: 0.3;
}