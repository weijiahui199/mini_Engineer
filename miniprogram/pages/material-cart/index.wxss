/* 申领车页面样式 */
.container {
  min-height: 100vh;
  background: #f5f5f5;
  padding-bottom: 120rpx;
}

/* 导航栏 */
.navbar {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  background: white;
  z-index: 100;
  padding-top: env(safe-area-inset-top);
  border-bottom: 1rpx solid #e5e5e5;
}

.navbar-content {
  height: 88rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 32rpx;
}

.navbar-left {
  display: flex;
  align-items: center;
}

.nav-icon {
  width: 48rpx;
  height: 48rpx;
}

.nav-title {
  font-size: 34rpx;
  font-weight: 500;
  color: #1a1a1a;
  margin-left: 16rpx;
}

.manage-btn {
  font-size: 28rpx;
  color: #0052d9;
}

/* 提示信息 */
.tip-banner {
  background: #e6f4ff;
  padding: 20rpx 32rpx;
  display: flex;
  align-items: center;
  margin-top: calc(88rpx + env(safe-area-inset-top));
}

.tip-icon {
  width: 32rpx;
  height: 32rpx;
  margin-right: 12rpx;
  flex-shrink: 0;
}

.tip-text {
  font-size: 26rpx;
  color: #0052d9;
  line-height: 1.5;
}

/* 主内容区 */
.main-content {
  padding-top: 16rpx;
}

/* 全选栏 */
.select-all-bar {
  background: white;
  padding: 20rpx 32rpx;
  margin-bottom: 16rpx;
}

.checkbox-wrapper {
  display: flex;
  align-items: center;
}

.checkbox {
  width: 40rpx;
  height: 40rpx;
  border: 3rpx solid #d9d9d9;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.2s;
}

.checkbox.checked {
  background: #0052d9;
  border-color: #0052d9;
}

.check-icon {
  width: 24rpx;
  height: 24rpx;
}

.select-all-text {
  font-size: 28rpx;
  color: #333;
  margin-left: 16rpx;
}

/* 购物车列表 */
.cart-list {
  padding: 0 32rpx;
}

.cart-item {
  background: white;
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 16rpx;
  display: flex;
  align-items: flex-start;
  position: relative;
  transition: all 0.3s;
}

.cart-item.warning {
  border-left: 6rpx solid #ff9800;
}

.item-image {
  width: 160rpx;
  height: 160rpx;
  border-radius: 12rpx;
  background: #f5f5f5;
  margin: 0 24rpx;
}

.item-info {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.item-name {
  font-size: 30rpx;
  font-weight: 500;
  color: #1a1a1a;
  margin-bottom: 8rpx;
}

.item-spec {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 16rpx;
}

.item-footer {
  display: flex;
  justify-content: space-between;
  align-items: flex-end;
}

.stock-info {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.stock-text {
  font-size: 26rpx;
  color: #666;
}

.stock-text.warning {
  color: #ff9800;
  font-weight: 500;
}

.stock-warning {
  font-size: 22rpx;
  color: #ff9800;
}

/* 数量步进器 */
.quantity-stepper {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.stepper-btn {
  width: 48rpx;
  height: 48rpx;
  border-radius: 50%;
  background: #f5f5f5;
  display: flex;
  align-items: center;
  justify-content: center;
  border: none;
  padding: 0;
  transition: all 0.2s;
}

.stepper-btn.plus {
  background: #e6f4ff;
}

.stepper-btn.disabled {
  opacity: 0.3;
}

.stepper-btn:active:not(.disabled) {
  transform: scale(0.95);
}

.stepper-icon {
  width: 24rpx;
  height: 24rpx;
}

.quantity-input {
  width: 80rpx;
  height: 48rpx;
  text-align: center;
  font-size: 28rpx;
  font-weight: 500;
  color: #333;
  background: #f8f8f8;
  border-radius: 8rpx;
}

/* 删除按钮 */
.delete-btn {
  position: absolute;
  right: 24rpx;
  top: 24rpx;
  width: 48rpx;
  height: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #fff5f5;
  border-radius: 50%;
}

.delete-icon {
  width: 32rpx;
  height: 32rpx;
}

/* 空状态 */
.empty-state {
  padding: 120rpx 60rpx;
  text-align: center;
}

.empty-icon {
  font-size: 120rpx;
  margin-bottom: 32rpx;
}

.empty-text {
  font-size: 32rpx;
  color: #333;
  margin-bottom: 16rpx;
  display: block;
}

.empty-hint {
  font-size: 28rpx;
  color: #999;
  margin-bottom: 48rpx;
  display: block;
}

.go-shopping-btn {
  width: 280rpx;
  height: 88rpx;
  background: linear-gradient(135deg, #0052d9 0%, #0066ff 100%);
  color: white;
  font-size: 32rpx;
  font-weight: 500;
  border-radius: 44rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 0 auto;
  border: none;
}

/* 工单关联 */
.ticket-section {
  background: white;
  padding: 32rpx;
  margin: 16rpx 0;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
}

.section-title {
  font-size: 30rpx;
  font-weight: 500;
  color: #1a1a1a;
}

.section-hint {
  font-size: 24rpx;
  color: #999;
}

.selected-ticket {
  display: flex;
  align-items: center;
  justify-content: space-between;
  background: #e6f4ff;
  border: 2rpx solid #b3d8ff;
  border-radius: 12rpx;
  padding: 24rpx;
}

.ticket-info {
  flex: 1;
}

.ticket-header {
  display: flex;
  align-items: center;
  gap: 16rpx;
  margin-bottom: 12rpx;
}

.ticket-no {
  font-size: 28rpx;
  font-weight: 500;
  color: #0052d9;
}

.ticket-status {
  padding: 4rpx 12rpx;
  border-radius: 8rpx;
  font-size: 22rpx;
}

.status-processing {
  background: #e6f4ff;
  color: #0052d9;
}

.status-pending {
  background: #fff7e6;
  color: #ff9800;
}

.ticket-title {
  font-size: 26rpx;
  color: #333;
  margin-bottom: 8rpx;
  display: block;
}

.ticket-customer {
  font-size: 24rpx;
  color: #666;
  display: block;
}

.change-ticket {
  font-size: 26rpx;
  color: #0052d9;
}

/* 快速选择 */
.quick-select {
  margin-bottom: 24rpx;
}

.quick-tickets {
  white-space: nowrap;
}

.quick-ticket-item {
  display: inline-block;
  background: #f8f8f8;
  border: 2rpx solid #e5e5e5;
  border-radius: 12rpx;
  padding: 16rpx 24rpx;
  margin-right: 16rpx;
  transition: all 0.2s;
}

.quick-ticket-item:active {
  background: #e6f4ff;
  border-color: #0052d9;
}

.quick-ticket-no {
  font-size: 24rpx;
  color: #0052d9;
  margin-right: 12rpx;
}

.quick-ticket-title {
  font-size: 24rpx;
  color: #666;
}

.select-ticket-btn {
  width: 100%;
  height: 88rpx;
  background: #f8f8f8;
  border: 2rpx dashed #d9d9d9;
  border-radius: 12rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 12rpx;
}

.btn-icon {
  width: 32rpx;
  height: 32rpx;
}

/* 备注 */
.note-section {
  background: white;
  padding: 32rpx;
  margin: 16rpx 0;
  position: relative;
}

.note-input {
  width: 100%;
  min-height: 160rpx;
  padding: 20rpx;
  background: #f8f8f8;
  border-radius: 12rpx;
  font-size: 28rpx;
  margin-top: 16rpx;
}

.note-count {
  position: absolute;
  right: 52rpx;
  bottom: 52rpx;
  font-size: 24rpx;
  color: #999;
}

/* 申领须知 */
.notice-section {
  background: #fffbf0;
  padding: 24rpx 32rpx;
  margin: 16rpx 0;
}

.notice-header {
  display: flex;
  align-items: center;
  margin-bottom: 16rpx;
}

.notice-icon {
  width: 32rpx;
  height: 32rpx;
  margin-right: 12rpx;
}

.notice-title {
  font-size: 28rpx;
  font-weight: 500;
  color: #ff9800;
}

.notice-content {
  padding-left: 44rpx;
}

.notice-item {
  font-size: 26rpx;
  color: #666;
  line-height: 1.8;
  display: block;
}

/* 底部占位 */
.bottom-placeholder {
  height: 32rpx;
}

/* 底部结算栏 */
.checkout-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: white;
  padding: 24rpx 32rpx;
  padding-bottom: calc(24rpx + env(safe-area-inset-bottom));
  display: flex;
  align-items: center;
  justify-content: space-between;
  box-shadow: 0 -4rpx 24rpx rgba(0, 0, 0, 0.06);
  z-index: 100;
}

.checkout-info {
  display: flex;
  align-items: center;
  gap: 24rpx;
}

.selected-count {
  font-size: 28rpx;
  color: #666;
}

.total-price {
  display: flex;
  align-items: baseline;
  gap: 8rpx;
}

.price-label {
  font-size: 28rpx;
  color: #666;
}

.price-value {
  font-size: 36rpx;
  font-weight: 500;
  color: #ff4444;
}

.submit-btn {
  width: 240rpx;
  height: 88rpx;
  background: linear-gradient(135deg, #0052d9 0%, #0066ff 100%);
  color: white;
  font-size: 32rpx;
  font-weight: 500;
  border-radius: 44rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border: none;
  transition: all 0.3s;
}

.submit-btn:active:not(.disabled) {
  transform: scale(0.98);
  opacity: 0.9;
}

.submit-btn.disabled {
  background: #cccccc;
  opacity: 0.6;
}

/* 工单选择弹窗 */
.modal-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  z-index: 200;
  display: flex;
  align-items: flex-end;
}

.ticket-selector {
  background: white;
  border-radius: 24rpx 24rpx 0 0;
  width: 100%;
  max-height: 70vh;
  display: flex;
  flex-direction: column;
}

.selector-header {
  padding: 32rpx;
  border-bottom: 1rpx solid #e5e5e5;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.selector-title {
  font-size: 32rpx;
  font-weight: 500;
  color: #1a1a1a;
}

.close-icon {
  width: 48rpx;
  height: 48rpx;
}

/* 搜索栏 */
.search-bar {
  padding: 20rpx 32rpx;
  display: flex;
  align-items: center;
  background: #f8f8f8;
  margin: 16rpx 32rpx;
  border-radius: 12rpx;
}

.search-icon {
  width: 32rpx;
  height: 32rpx;
  margin-right: 16rpx;
}

.search-input {
  flex: 1;
  font-size: 28rpx;
  color: #333;
}

/* Tab栏 */
.tab-bar {
  display: flex;
  padding: 0 32rpx;
  border-bottom: 1rpx solid #e5e5e5;
}

.tab-item {
  flex: 1;
  text-align: center;
  padding: 24rpx 0;
  font-size: 28rpx;
  color: #666;
  position: relative;
}

.tab-item.active {
  color: #0052d9;
  font-weight: 500;
}

.tab-item.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 48rpx;
  height: 4rpx;
  background: #0052d9;
  border-radius: 2rpx;
}

/* 工单列表 */
.ticket-list {
  flex: 1;
  overflow-y: auto;
  padding: 16rpx 32rpx;
}

.ticket-item {
  padding: 24rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.ticket-item.no-link {
  text-align: center;
  border-bottom: 2rpx solid #e5e5e5;
  padding: 32rpx 0;
}

.no-link-text {
  font-size: 28rpx;
  color: #666;
}

.ticket-content {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.ticket-meta {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.ticket-time {
  font-size: 24rpx;
  color: #999;
}

.no-tickets {
  padding: 80rpx 0;
  text-align: center;
  font-size: 28rpx;
  color: #999;
}