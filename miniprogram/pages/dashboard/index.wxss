/* 工程师工作台页面样式 */
.dashboard-container {
  min-height: 100vh;
  background: #f8fafc;
  padding-bottom: env(safe-area-inset-bottom);
}

/* 状态栏 */
.status-header {
  padding: 16rpx 32rpx;
  padding-top: calc(16rpx + env(safe-area-inset-top));
  color: white;
}

.status-content {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
}

.engineer-info {
  display: flex;
  align-items: center;
  gap: 24rpx;
}

/* 头像样式 */
/* 旧的TDesign样式已移除 */

/* 头像按钮样式 */
.avatar-button {
  width: 124rpx;  /* 稍微增加以包含边框 */
  height: 124rpx;
  padding: 2rpx;  /* 添加内边距 */
  margin-right: 24rpx;
  background: transparent;
  border: none;
  position: relative;
  flex-shrink: 0;  /* 防止被压缩 */
  box-sizing: border-box;
}

.avatar-button::after {
  border: none;
}

.avatar-wrapper {
  width: 120rpx;
  height: 120rpx;
  position: relative;
  border-radius: 50%;
  /* 不使用overflow:hidden */
  background: #f0f0f0;  /* 灰色背景 */
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 0 0 3rpx rgba(255, 255, 255, 0.8), 0 4rpx 12rpx rgba(0, 0, 0, 0.1);  /* 使用box-shadow实现边框和阴影 */
}

.engineer-avatar {
  width: 114rpx;  /* 稍小于容器，留出边缘空间 */
  height: 114rpx;
  display: block;
  border-radius: 50%;  /* 直接在图片上应用圆形 */
  object-fit: cover;  /* 确保图片填充并保持比例 */
}

.avatar-edit-overlay {
  position: absolute;
  bottom: 2rpx;  /* 稍微向内移动，避免被裁剪 */
  right: 2rpx;   /* 稍微向内移动，避免被裁剪 */
  width: 32rpx;  /* 稍微减小尺寸 */
  height: 32rpx;
  background: linear-gradient(135deg, #0ea5e9 0%, #06b6d4 100%);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  border: 2rpx solid rgba(255, 255, 255, 0.9);
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.2);
  z-index: 2;  /* 确保在头像之上 */
}

.camera-icon {
  width: 20rpx;
  height: 20rpx;
  filter: brightness(0) invert(1);
}

.engineer-details {
  flex: 1;
}

.engineer-name {
  display: flex;
  align-items: center;
  font-size: 34rpx;
  font-weight: 600;
  margin-bottom: 4rpx;
}

.status-indicator {
  width: 16rpx;
  height: 16rpx;
  border-radius: 50%;
  margin-left: 16rpx;
  margin-right: 8rpx;
}

.status-indicator.online {
  background-color: #52c41a;
}

.status-indicator.busy {
  background-color: #faad14;
}

.status-indicator.offline {
  background-color: #8c8c8c;
}

.status-text {
  font-size: 28rpx;
  opacity: 0.9;
}

.workload {
  font-size: 28rpx;
  opacity: 0.8;
}

.location-info {
  text-align: right;
}

.location {
  font-size: 28rpx;
  opacity: 0.9;
  margin-bottom: 8rpx;
}

.last-update {
  font-size: 24rpx;
  opacity: 0.7;
}

/* 章节容器 */
.section-container {
  padding: 16rpx 32rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #111827;
  margin-bottom: 12rpx;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 12rpx;
}

.section-more {
  font-size: 28rpx;
  color: var(--primary-color);
}

/* 今日工作概览 */
.today-stats-grid {
  display: grid;
  grid-template-columns: repeat(5, 1fr);
  gap: 10rpx;
  padding: 4rpx 0;
}

.stat-card {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 14rpx 8rpx;
  background: white;
  border-radius: var(--radius-lg);
  box-shadow: var(--shadow-light);
  transition: all 0.3s;
}

.stat-card:active {
  transform: scale(0.95);
  box-shadow: var(--shadow-standard);
}

.stat-icon-wrapper {
  width: 72rpx;
  height: 72rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 6rpx;
}

.stat-icon {
  width: 60rpx;
  height: 60rpx;
  display: block;
}

.stat-value {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 6rpx;
}

.stat-label {
  font-size: 22rpx;
  color: #6b7280;
}

.text-orange { color: #faad14; }
.text-blue { color: #1890ff; }
.text-green { color: #52c41a; }
.text-cyan { color: #13c2c2; }
.text-red { color: #ff4d4f; }

/* 快捷操作 */
.quick-actions-grid {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 12rpx;
  padding: 4rpx 0;
}

.quick-action-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 16rpx 10rpx;
  background: white;
  border-radius: var(--radius-lg);
  box-shadow: var(--shadow-light);
  transition: all 0.3s;
}

.quick-action-item:active {
  transform: scale(0.95);
  box-shadow: var(--shadow-standard);
}

.quick-action-icon {
  width: 100rpx;
  height: 100rpx;
  background: linear-gradient(135deg, #f0f9ff, #e0f2fe);
  border-radius: var(--radius-lg);
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 8rpx;
  padding: 12rpx;
}

.action-image-icon {
  width: 100rpx;
  height: 100rpx;
  display: block;
}

.quick-action-text {
  font-size: 26rpx;
  color: #374151;
  font-weight: 500;
}

.emoji-icon {
  font-size: 48rpx;
}

/* 工单列表 */
.ticket-list {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.ticket-card {
  background: white;
  border-radius: var(--radius-md);
  padding: 20rpx;
  padding-bottom: 60rpx;
  box-shadow: var(--shadow-standard);
  border-left: 6rpx solid transparent;
  position: relative;
}

.ticket-card[data-priority="urgent"] {
  border-left-color: var(--priority-urgent);
}

.ticket-card[data-priority="high"] {
  border-left-color: var(--priority-high);
}

.ticket-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
  padding-bottom: 16rpx;
  border-bottom: 1px solid #f0f0f0;
}

.ticket-left {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.ticket-right {
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.ticket-no {
  font-weight: 600;
  color: #374151;
  font-size: 28rpx;
}

.ticket-content {
  margin-bottom: 20rpx;
}

.content-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 12rpx;
}

.ticket-title {
  font-size: 32rpx;
  color: #111827;
  font-weight: 500;
  flex: 1;
  margin-right: 12rpx;
}

.assignee-tag {
  display: flex;
  align-items: center;
  background: #f3f4f6;
  padding: 4rpx 12rpx;
  border-radius: 8rpx;
  flex-shrink: 0;
}

.assignee-icon {
  width: 24rpx;
  height: 24rpx;
  margin-right: 6rpx;
}

.assignee-text {
  font-size: 24rpx;
  color: #6b7280;
}

.ticket-category {
  display: flex;
  align-items: center;
  font-size: 26rpx;
  color: #6b7280;
}

.category-icon {
  width: 32rpx;
  height: 32rpx;
  margin-right: 8rpx;
}

.category-text {
  color: #6b7280;
}

/* 工单信息 - 2列布局 */
.ticket-info {
  margin-bottom: 20rpx;
}

.info-row {
  display: flex;
  gap: 24rpx;
  margin-bottom: 12rpx;
}

.info-row:last-child {
  margin-bottom: 0;
}

.info-item {
  flex: 1;
  display: flex;
  align-items: center;
  font-size: 26rpx;
  color: #6b7280;
  min-width: 0;
}

.info-item.full-width {
  flex: 1 1 100%;
}

.info-icon {
  width: 32rpx;
  height: 32rpx;
  margin-right: 8rpx;
  flex-shrink: 0;
}

.info-text {
  flex: 1;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.ticket-actions {
  position: absolute;
  bottom: 20rpx;
  right: 20rpx;
  display: flex;
  gap: 12rpx;
}

/* 状态弹窗 */
.status-popup {
  background: white;
  border-radius: var(--radius-lg) var(--radius-lg) 0 0;
  padding: 32rpx;
  padding-bottom: calc(32rpx + env(safe-area-inset-bottom));
}

.popup-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 32rpx;
}

.popup-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #111827;
}

/* TDesign组件样式覆盖 */
.dashboard-container .t-grid {
  gap: 16rpx;
}

.dashboard-container .t-grid-item__content {
  padding: 0;
}

.dashboard-container .t-grid-item__text {
  font-size: 26rpx;
  color: #6b7280;
  margin-top: 8rpx;
}

.dashboard-container .t-notice-bar {
  border-radius: var(--radius-md);
}

.dashboard-container .t-tag {
  padding: 4rpx 12rpx;
}

/* TDesign按钮样式已移除，使用自定义磨砂按钮 */

.dashboard-container .t-radio-group {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.dashboard-container .t-radio {
  padding: 16rpx 0;
}

/* 可点击区域样式 */
.ticket-clickable {
  cursor: pointer;
}

.ticket-clickable:active {
  opacity: 0.95;
}

/* 工单池样式 */
.ticket-card.pool-ticket {
  border-left: 4px solid #07c160 !important;
  background: linear-gradient(to right, rgba(7, 193, 96, 0.05), #ffffff) !important;
}

/* 我的工单样式 */
.ticket-card.my-ticket {
  border-left: 4px solid #1989fa !important;
  background: linear-gradient(to right, rgba(25, 137, 250, 0.05), #ffffff) !important;
}

/* 自定义磨砂玻璃按钮样式 */
.custom-action-btn {
  min-width: 120rpx;
  height: 56rpx;
  padding: 0 24rpx;
  font-size: 26rpx;
  border-radius: 12rpx;
  border: none;
  font-weight: 500;
  display: inline-flex;
  align-items: center;
  justify-content: center;
  position: relative;
  overflow: hidden;
  transition: all 0.3s ease;
  backdrop-filter: blur(10px);
  -webkit-backdrop-filter: blur(10px);
}

/* 磨砂玻璃效果 */
.custom-action-btn::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: inherit;
  filter: blur(10px);
  opacity: 0.8;
  z-index: -1;
}

/* 开始处理按钮 - 蓝色 */
.btn-primary-action {
  background: rgba(37, 99, 235, 0.15);
  color: #2563eb;
  border: 2rpx solid rgba(37, 99, 235, 0.3);
  box-shadow: 0 4rpx 12rpx rgba(37, 99, 235, 0.2);
}

.btn-primary-action:active {
  background: rgba(37, 99, 235, 0.25);
  border-color: rgba(37, 99, 235, 0.5);
  transform: scale(0.98);
}

/* 查看详情按钮 - 灰色 */
.btn-view-detail {
  background: rgba(107, 114, 128, 0.15);
  color: #4b5563;
  border: 2rpx solid rgba(107, 114, 128, 0.3);
  box-shadow: 0 4rpx 12rpx rgba(107, 114, 128, 0.2);
}

.btn-view-detail:active {
  background: rgba(107, 114, 128, 0.25);
  border-color: rgba(107, 114, 128, 0.5);
  transform: scale(0.98);
}

/* 已完成按钮 - 绿色 */
.btn-success {
  background: rgba(34, 197, 94, 0.15);
  color: #16a34a;
  border: 2rpx solid rgba(34, 197, 94, 0.3);
  box-shadow: 0 4rpx 12rpx rgba(34, 197, 94, 0.2);
}

.btn-success:active {
  background: rgba(34, 197, 94, 0.25);
  border-color: rgba(34, 197, 94, 0.5);
  transform: scale(0.98);
}

/* 无待处理工单提示样式 */
.no-tickets-hint {
  padding: 60rpx 32rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background: linear-gradient(135deg, #f6f9fc 0%, #ffffff 100%);
  border-radius: 16rpx;
  margin: 20rpx 0;
}

.hint-icon {
  font-size: 64rpx;
  margin-bottom: 20rpx;
  animation: pulse 2s ease-in-out infinite;
}

.hint-text {
  font-size: 32rpx;
  color: #4a5568;
  font-weight: 500;
  letter-spacing: 1rpx;
}

@keyframes pulse {
  0%, 100% {
    transform: scale(1);
    opacity: 1;
  }
  50% {
    transform: scale(1.1);
    opacity: 0.8;
  }
}