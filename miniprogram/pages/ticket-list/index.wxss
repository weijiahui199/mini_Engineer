/* 工单列表页面样式 */
.ticket-list-container {
  height: 100vh;
  background: #f8fafc;
  display: flex;
  flex-direction: column;
  position: relative;
}

/* ===== 工单状态样式 ===== */

/* 工单池样式 - 突出显示未分配工单 */
.ticket-card.pool-ticket {
  border-left: 4px solid #07c160 !important;
  background: linear-gradient(to right, #f0fff4, #ffffff) !important;
  position: relative;
}

.ticket-card.pool-ticket::before {
  content: '待接单';
  position: absolute;
  top: 16rpx;
  right: 16rpx;
  padding: 4rpx 12rpx;
  background: #07c160;
  color: white;
  font-size: 22rpx;
  border-radius: 4rpx;
  z-index: 1;
}

/* 已被接单的工单样式 */
.ticket-card.taken {
  background: #f5f5f5 !important;
  opacity: 0.85;
}

/* 我的工单样式 */
.ticket-card.my-ticket {
  border-left: 4px solid #1989fa !important;
  background: linear-gradient(to right, #f0f8ff, #ffffff) !important;
}

/* 状态提示文字 */
.status-hint {
  color: #999;
  font-size: 24rpx;
  font-style: italic;
  padding: 8rpx 16rpx;
  display: inline-block;
}

/* 搜索容器 */
.search-container {
  padding: 24rpx 32rpx;
  background: white;
  box-shadow: var(--shadow-light);
}


/* 抽屉式筛选容器 */
.filter-container-drawer {
  background: white;
  padding: 16rpx 24rpx;
  border-bottom: 1px solid #f0f0f0;
  position: relative;
  z-index: 10;
}

/* 主筛选行 */
.filter-main-row {
  display: flex;
  gap: 20rpx;
  align-items: center;
  flex-wrap: nowrap;
  overflow: visible;
  padding: 4rpx 0;
}

/* 响应式布局样式 */
.compact-layout {
  padding: 12rpx 16rpx;
}

.compact-layout .filter-main-row {
  gap: 12rpx;
}

.comfortable-layout {
  padding: 20rpx 32rpx;
}

.comfortable-layout .filter-main-row {
  gap: 20rpx;
}

/* 删除旧的布局样式 - 不再需要 */

/* 删除旧的标签样式 - 不再需要 */

/* 删除旧的紧急标签样式 - 不再需要 */

.filter-count {
  margin-left: 4rpx;
  font-size: 24rpx;
  color: #999;
}

/* 状态选择包装器 */
.status-selector-wrapper {
  flex: 0 0 auto;
  min-width: 160rpx;
  position: relative;
  z-index: 20;
}

/* 状态选择按钮 */
.status-selector-btn {
  display: flex;
  align-items: center;
  justify-content: space-between;
  gap: 8rpx;
  padding: 10rpx 20rpx;
  background: #f5f5f5;
  border: 1px solid #e0e0e0;
  border-radius: 20rpx;
  font-size: 26rpx;
  color: #333;
  transition: all 0.3s;
  width: 100%;
  min-height: 60rpx;
  box-sizing: border-box;
}

.status-selector-btn.active {
  background: #e6f4ff;
  border-color: #1890ff;
  color: #1890ff;
}

.status-selector-btn.open {
  background: #e6f4ff;
  border-color: #1890ff;
  color: #1890ff;
}

.status-selector-btn .dropdown-icon {
  font-size: 20rpx;
  transition: transform 0.3s;
}

.status-selector-btn.open .dropdown-icon {
  transform: rotate(180deg);
}

/* 按钮内容样式 */
.btn-content {
  display: flex;
  align-items: center;
  gap: 12rpx;  /* 增加图标和文字之间的间距 */
  flex: 1;
  overflow: hidden;
}

.btn-icon {
  flex-shrink: 0;
  font-size: 26rpx;
  display: inline-block;
  margin-right: 12rpx;  /* 备用方案：使用margin确保间距 */
}

.btn-text {
  flex: 1;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  font-size: 26rpx;
  display: inline-block;
}

/* 状态下拉面板 */
.status-dropdown-panel {
  position: absolute;
  top: calc(100% + 12rpx);
  left: 0;
  min-width: 220rpx;
  background: white;
  border: 1px solid #e5e7eb;
  border-radius: 12rpx;
  box-shadow: 0 4rpx 16rpx rgba(0,0,0,0.12);
  z-index: 1000;
  overflow: hidden;
  max-height: 400rpx;
  overflow-y: auto;
}

.status-option {
  padding: 14rpx 20rpx;
  border-bottom: 1px solid #f0f0f0;
  font-size: 28rpx;
  color: #333;
  transition: background 0.2s;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.status-option:last-child {
  border-bottom: none;
}

.status-option:active {
  background: #f5f5f5;
}

.status-option.selected {
  background: #e6f4ff;
  color: #1890ff;
  font-weight: 500;
}

.status-option.urgent-option {
  color: #ff4d4f;
}

.status-option.selected.urgent-option {
  background: #fff1f0;
  color: #ff4d4f;
}

.option-label {
  flex: 1;
}

.option-count {
  font-size: 24rpx;
  color: #999;
  margin-left: 8rpx;
}

.status-option.selected .option-count {
  color: #1890ff;
}

/* 时间选择包装器 */
.time-selector-wrapper {
  flex: 0 0 auto;
  min-width: 160rpx;
  position: relative;
  z-index: 19;
}

/* 时间选择按钮 */
.time-selector-btn {
  display: flex;
  align-items: center;
  justify-content: space-between;
  gap: 8rpx;
  padding: 10rpx 20rpx;
  background: #f5f5f5;
  border: 1px solid #e0e0e0;
  border-radius: 20rpx;
  font-size: 26rpx;
  color: #333;
  transition: all 0.3s;
  width: 100%;
  min-height: 60rpx;
  box-sizing: border-box;
}

/* 紧凑布局时间按钮 */
.compact-layout .time-selector-btn {
  font-size: 24rpx;
  padding: 8rpx 12rpx;
}

/* 舒适布局时间按钮 */
.comfortable-layout .time-selector-btn {
  font-size: 28rpx;
  padding: 12rpx 20rpx;
}

.time-selector-btn.active {
  background: #fff7e6;
  border-color: #faad14;
  color: #faad14;
}

.time-selector-btn .dropdown-icon {
  font-size: 20rpx;
  transition: transform 0.3s;
}

.time-selector-btn.open {
  background: #fff7e6;
  border-color: #faad14;
  color: #faad14;
}

.time-selector-btn.open .dropdown-icon {
  transform: rotate(180deg);
}


/* 时间选择下拉面板 */
.time-dropdown-panel {
  position: absolute;
  top: calc(100% + 12rpx);
  left: 0;
  min-width: 200rpx;
  background: white;
  border: 1px solid #e5e7eb;
  border-radius: 12rpx;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.1);
  z-index: 999;
  overflow: hidden;
}

.time-option {
  padding: 16rpx 24rpx;
  border-bottom: 1px solid #f0f0f0;
  font-size: 28rpx;
  color: #333;
  transition: background 0.2s;
}

.time-option:last-child {
  border-bottom: none;
}

.time-option:active {
  background: #f5f5f5;
}

.time-option.selected {
  background: #e0f2fe;
  color: #0ea5e9;
  font-weight: 500;
}

.time-option.selected::before {
  content: '✓';
  margin-right: 8rpx;
  color: #0ea5e9;
}

/* 已关闭工单提示 */
.closed-tip {
  display: flex;
  align-items: center;
  gap: 8rpx;
  padding: 12rpx 16rpx;
  background: #fff7e6;
  border-radius: 8rpx;
  margin-top: 16rpx;
  position: relative;
  z-index: 1;
}

.closed-tip .tip-text {
  font-size: 24rpx;
  color: #f59e0b;
}

/* 工单滚动区域 */
.ticket-scroll {
  flex: 1;
  overflow: hidden;
}

/* 工单列表 */
.ticket-list {
  padding: 24rpx 32rpx;
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

/* 工单卡片 */
.ticket-card {
  background: white;
  border-radius: var(--radius-md);
  padding: 24rpx;
  padding-bottom: 90rpx;
  box-shadow: var(--shadow-standard);
  border-left: 6rpx solid transparent;
  position: relative;
}

/* 可点击区域 */
.card-clickable {
  cursor: pointer;
}

.ticket-card.urgent-border {
  border-left-color: var(--priority-urgent);
}

/* 卡片头部 */
.card-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
  padding-bottom: 16rpx;
  border-bottom: 1px solid #f0f0f0;
}

.header-left {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.header-right {
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.ticket-no {
  font-size: 28rpx;
  font-weight: 600;
  color: #374151;
}

/* 卡片内容 */
.card-content {
  margin-bottom: 20rpx;
}

.content-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 12rpx;
}

.ticket-title {
  font-size: 32rpx;
  color: #111827;
  font-weight: 500;
  flex: 1;
  margin-right: 12rpx;
}

.assignee-tag {
  display: flex;
  align-items: center;
  background: #f3f4f6;
  padding: 4rpx 12rpx;
  border-radius: 8rpx;
  flex-shrink: 0;
}

.assignee-icon {
  width: 24rpx;
  height: 24rpx;
  margin-right: 6rpx;
}

.assignee-text {
  font-size: 24rpx;
  color: #6b7280;
}

.ticket-category {
  display: flex;
  align-items: center;
  font-size: 26rpx;
  color: #6b7280;
}

.category-icon {
  width: 32rpx;
  height: 32rpx;
  margin-right: 8rpx;
}

.category-text {
  color: #6b7280;
}

/* 卡片信息 - 2列布局 */
.card-info {
  margin-bottom: 20rpx;
}

.info-row {
  display: flex;
  gap: 24rpx;
  margin-bottom: 12rpx;
}

.info-row:last-child {
  margin-bottom: 0;
}

.info-item {
  flex: 1;
  display: flex;
  align-items: center;
  font-size: 26rpx;
  color: #6b7280;
  min-width: 0;
}

.info-item.full-width {
  flex: 1 1 100%;
}

.info-icon {
  width: 32rpx;
  height: 32rpx;
  margin-right: 8rpx;
  flex-shrink: 0;
}

.info-text {
  flex: 1;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

/* 卡片操作 */
.card-actions {
  position: absolute;
  bottom: 24rpx;
  right: 24rpx;
  display: flex;
  gap: 12rpx;
  align-items: center;
}

/* 操作按钮样式优化 */
.card-actions .t-button {
  min-width: 120rpx;
}

.card-actions .t-button--success {
  background: #07c160;
  border-color: #07c160;
}

/* 已被接单提示优化 */
.card-actions .status-hint {
  background: #f5f5f5;
  border-radius: 8rpx;
  padding: 10rpx 20rpx;
}

/* 自定义磨砂按钮样式 */
.custom-btn {
  min-width: 120rpx;
  height: 56rpx;
  padding: 0 24rpx;
  font-size: 26rpx;
  border-radius: 12rpx;
  border: none;
  font-weight: 500;
  display: inline-flex;
  align-items: center;
  justify-content: center;
  position: relative;
  overflow: hidden;
  transition: all 0.3s ease;
}

/* 磨砂玻璃效果 */
.custom-btn::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: inherit;
  filter: blur(10px);
  opacity: 0.8;
  z-index: -1;
}

/* 查看详情按钮 - 浅蓝色 */
.btn-detail {
  background: rgba(66, 153, 225, 0.15);
  backdrop-filter: blur(10px);
  -webkit-backdrop-filter: blur(10px);
  color: #2563eb;
  border: 2rpx solid rgba(66, 153, 225, 0.3);
  box-shadow: 0 4rpx 12rpx rgba(66, 153, 225, 0.2);
  margin-right: 12rpx;
}

.btn-detail:active {
  background: rgba(66, 153, 225, 0.25);
  border-color: rgba(66, 153, 225, 0.5);
  transform: scale(0.98);
}

/* 完成工单按钮 - 浅红色 */
.btn-complete {
  background: rgba(239, 68, 68, 0.15);
  backdrop-filter: blur(10px);
  -webkit-backdrop-filter: blur(10px);
  color: #dc2626;
  border: 2rpx solid rgba(239, 68, 68, 0.3);
  box-shadow: 0 4rpx 12rpx rgba(239, 68, 68, 0.2);
}

.btn-complete:active {
  background: rgba(239, 68, 68, 0.25);
  border-color: rgba(239, 68, 68, 0.5);
  transform: scale(0.98);
}

/* 开始处理按钮 - 主色蓝色 */
.btn-primary {
  background: rgba(37, 99, 235, 0.15);
  backdrop-filter: blur(10px);
  -webkit-backdrop-filter: blur(10px);
  color: #2563eb;
  border: 2rpx solid rgba(37, 99, 235, 0.3);
  box-shadow: 0 4rpx 12rpx rgba(37, 99, 235, 0.2);
}

.btn-primary:active {
  background: rgba(37, 99, 235, 0.25);
  border-color: rgba(37, 99, 235, 0.5);
  transform: scale(0.98);
}

/* 继续处理按钮 - 绿色 */
.btn-continue {
  background: rgba(34, 197, 94, 0.15);
  backdrop-filter: blur(10px);
  -webkit-backdrop-filter: blur(10px);
  color: #16a34a;
  border: 2rpx solid rgba(34, 197, 94, 0.3);
  box-shadow: 0 4rpx 12rpx rgba(34, 197, 94, 0.2);
}

.btn-continue:active {
  background: rgba(34, 197, 94, 0.25);
  border-color: rgba(34, 197, 94, 0.5);
  transform: scale(0.98);
}

/* 默认按钮 - 灰色 */
.btn-default {
  background: rgba(107, 114, 128, 0.15);
  backdrop-filter: blur(10px);
  -webkit-backdrop-filter: blur(10px);
  color: #4b5563;
  border: 2rpx solid rgba(107, 114, 128, 0.3);
  box-shadow: 0 4rpx 12rpx rgba(107, 114, 128, 0.2);
}

.btn-default:active {
  background: rgba(107, 114, 128, 0.25);
  border-color: rgba(107, 114, 128, 0.5);
  transform: scale(0.98);
}

/* 加载更多 */
.load-more {
  padding: 32rpx;
  display: flex;
  justify-content: center;
}


/* 滑动操作样式 */
.swipe-accept {
  background: var(--primary-color);
  color: white;
}

.swipe-pause {
  background: #faad14;
  color: white;
}

/* TDesign组件样式覆盖 */
.ticket-list-container .t-search {
  background: var(--light-blue-50);
  border-radius: var(--radius-md);
}

.ticket-list-container .t-tag {
  padding: 8rpx 16rpx;
  font-size: 26rpx;
}

.ticket-list-container .t-button--small {
  height: 56rpx;
  font-size: 26rpx;
  padding: 0 24rpx;
}

.ticket-list-container .t-empty {
  padding: 120rpx 0;
}

.ticket-list-container .t-checkbox-group,
.ticket-list-container .t-radio-group {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.ticket-list-container .t-checkbox,
.ticket-list-container .t-radio {
  padding: 12rpx 0;
}