/* 耗材管理页面样式 */
.materials-container {
  min-height: 100vh;
  background: #f8fafc;
}

/* 统计卡片 */
.stats-section {
  padding: 32rpx;
  padding-top: calc(32rpx + env(safe-area-inset-top));
}

.stats-card {
  padding: 32rpx;
  border-radius: var(--radius-lg);
  color: white;
}

.stats-title {
  font-size: 32rpx;
  opacity: 0.9;
  margin-bottom: 24rpx;
}

.stats-content {
  display: flex;
  justify-content: space-evenly;
  align-items: center;
}

.stat-item {
  text-align: center;
  flex: 1;
}

.stat-value {
  font-size: 48rpx;
  font-weight: bold;
  display: block;
  margin-bottom: 8rpx;
}

.stat-label {
  font-size: 24rpx;
  opacity: 0.8;
}

.stat-divider {
  width: 1rpx;
  height: 60rpx;
  background: rgba(255, 255, 255, 0.3);
}

/* 快速记录 */
.quick-record-section {
  padding: 32rpx;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #111827;
}

.section-link {
  font-size: 28rpx;
  color: var(--primary-color);
}

.common-materials {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
  margin-bottom: 32rpx;
}

.material-card {
  background: white;
  border-radius: var(--radius-md);
  padding: 24rpx;
  display: flex;
  align-items: center;
  box-shadow: var(--shadow-light);
}

.material-icon {
  width: 80rpx;
  height: 80rpx;
  background: var(--light-blue-50);
  border-radius: var(--radius-md);
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 36rpx;
  margin-right: 24rpx;
}

.material-info {
  flex: 1;
}

.material-name {
  font-size: 30rpx;
  font-weight: 500;
  color: #111827;
  display: block;
  margin-bottom: 8rpx;
}

.material-spec {
  font-size: 26rpx;
  color: #6b7280;
}

.material-action {
  display: flex;
  align-items: center;
}

.relate-ticket {
  background: white;
  border-radius: var(--radius-md);
  overflow: hidden;
  margin-bottom: 32rpx;
  box-shadow: var(--shadow-light);
}

.submit-section {
  margin-top: 32rpx;
}

/* 使用记录 */
.history-section {
  padding: 24rpx 32rpx;
}

.filter-bar {
  margin-bottom: 24rpx;
}

.filter-options {
  display: flex;
  gap: 16rpx;
  margin-top: 16rpx;
}

.record-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.record-card {
  background: white;
  border-radius: var(--radius-md);
  padding: 24rpx;
  box-shadow: var(--shadow-light);
}

.record-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.record-date {
  display: flex;
  flex-direction: column;
}

.date-text {
  font-size: 28rpx;
  font-weight: 500;
  color: #374151;
}

.time-text {
  font-size: 24rpx;
  color: #6b7280;
  margin-top: 4rpx;
}

.record-content {
  margin-bottom: 16rpx;
}

.materials-summary {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}

.summary-item {
  display: flex;
  align-items: center;
  gap: 8rpx;
  padding: 8rpx 16rpx;
  background: #f3f4f6;
  border-radius: var(--radius-sm);
  font-size: 26rpx;
}

.item-name {
  color: #374151;
}

.item-quantity {
  color: #6b7280;
}

.more-items {
  font-size: 26rpx;
  color: #9ca3af;
  padding: 8rpx 16rpx;
}

.record-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-top: 16rpx;
  border-top: 1rpx solid #f3f4f6;
}

.total-cost {
  font-size: 28rpx;
  font-weight: 500;
  color: #374151;
}

.record-status {
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.status-text {
  font-size: 26rpx;
  color: #10b981;
}

/* 库存查询 */
.inventory-section {
  padding: 24rpx 0;
}

.category-selector {
  background: white;
  padding: 24rpx 0;
  margin-bottom: 24rpx;
}

.category-scroll {
  width: 100%;
}

.category-list {
  display: flex;
  padding: 0 32rpx;
  gap: 24rpx;
}

.category-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 16rpx 24rpx;
  border-radius: var(--radius-md);
  background: #f3f4f6;
  min-width: 120rpx;
}

.category-item.active {
  background: var(--primary-color);
  color: white;
}

.category-icon {
  font-size: 36rpx;
  margin-bottom: 8rpx;
}

.category-name {
  font-size: 26rpx;
  white-space: nowrap;
}

.inventory-list {
  padding: 0 32rpx;
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.inventory-card {
  background: white;
  border-radius: var(--radius-md);
  padding: 24rpx;
  box-shadow: var(--shadow-light);
}

.inventory-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 20rpx;
}

.inventory-info {
  flex: 1;
}

.inventory-name {
  font-size: 30rpx;
  font-weight: 500;
  color: #111827;
  display: block;
  margin-bottom: 8rpx;
}

.inventory-spec {
  font-size: 26rpx;
  color: #6b7280;
}

.inventory-stats {
  margin-bottom: 20rpx;
}

.stock-numbers {
  display: flex;
  justify-content: space-between;
  margin-top: 12rpx;
  font-size: 26rpx;
  color: #6b7280;
}

.current-stock {
  font-weight: 500;
}

.inventory-actions {
  display: flex;
  gap: 16rpx;
}

/* 统计分析 */
.analysis-section {
  padding: 24rpx 32rpx;
}

.time-selector {
  background: white;
  border-radius: var(--radius-md);
  overflow: hidden;
  margin-bottom: 24rpx;
  box-shadow: var(--shadow-light);
}

.chart-container {
  margin-bottom: 32rpx;
}

.chart-card {
  background: white;
  border-radius: var(--radius-md);
  padding: 24rpx;
  box-shadow: var(--shadow-light);
}

.chart-title {
  font-size: 30rpx;
  font-weight: 500;
  color: #374151;
  margin-bottom: 24rpx;
}

.chart-placeholder {
  height: 400rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background: #f9fafb;
  border-radius: var(--radius-md);
}

.placeholder-text {
  font-size: 26rpx;
  color: #9ca3af;
  margin-top: 16rpx;
}

.ranking-section {
  margin-bottom: 32rpx;
}

.ranking-list {
  background: white;
  border-radius: var(--radius-md);
  padding: 16rpx;
  box-shadow: var(--shadow-light);
  margin-top: 16rpx;
}

.ranking-item {
  display: flex;
  align-items: center;
  padding: 16rpx;
  border-bottom: 1rpx solid #f3f4f6;
}

.ranking-item:last-child {
  border-bottom: none;
}

.ranking-index {
  width: 48rpx;
  height: 48rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-weight: bold;
  margin-right: 24rpx;
}

.ranking-1 {
  background: #fbbf24;
  color: white;
}

.ranking-2 {
  background: #d1d5db;
  color: white;
}

.ranking-3 {
  background: #f59e0b;
  color: white;
}

.ranking-index:not(.ranking-1):not(.ranking-2):not(.ranking-3) {
  background: #f3f4f6;
  color: #6b7280;
}

.ranking-info {
  flex: 1;
}

.ranking-name {
  font-size: 28rpx;
  font-weight: 500;
  color: #111827;
  display: block;
  margin-bottom: 4rpx;
}

.ranking-spec {
  font-size: 24rpx;
  color: #6b7280;
}

.ranking-data {
  text-align: right;
}

.ranking-quantity {
  font-size: 28rpx;
  font-weight: 500;
  color: #374151;
  display: block;
}

.export-section {
  margin-top: 32rpx;
}

/* 新增弹窗 */
.add-dialog {
  background: white;
  border-radius: var(--radius-lg) var(--radius-lg) 0 0;
  max-height: 80vh;
  display: flex;
  flex-direction: column;
}

.dialog-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 32rpx;
  border-bottom: 1rpx solid #e5e7eb;
}

.dialog-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #111827;
}

.dialog-content {
  flex: 1;
  padding: 32rpx;
  max-height: 60vh;
}

.search-material {
  margin-bottom: 24rpx;
}

.material-select-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
  margin-bottom: 32rpx;
}

.select-item {
  display: flex;
  align-items: center;
  padding: 16rpx;
  background: #f9fafb;
  border-radius: var(--radius-md);
  border: 2rpx solid transparent;
}

.select-item.selected {
  background: var(--light-blue-50);
  border-color: var(--primary-color);
}

.select-info {
  flex: 1;
  margin-left: 16rpx;
}

.select-name {
  font-size: 28rpx;
  color: #111827;
  display: block;
  margin-bottom: 4rpx;
}

.select-spec {
  font-size: 24rpx;
  color: #6b7280;
}

.remark-section {
  margin-top: 24rpx;
}

.dialog-actions {
  display: flex;
  gap: 24rpx;
  padding: 32rpx;
  border-top: 1rpx solid #e5e7eb;
}

.dialog-actions .t-button {
  flex: 1;
}

/* 加载更多 */
.load-more {
  padding: 32rpx;
  display: flex;
  justify-content: center;
}

/* TDesign组件样式覆盖 */
.materials-container .t-tabs {
  background: white;
}

.materials-container .t-tab-panel__content {
  background: #f8fafc;
}

.materials-container .t-search {
  background: white;
  border-radius: var(--radius-md);
}

.materials-container .t-tag {
  padding: 8rpx 20rpx;
}

.materials-container .t-cell {
  padding: 24rpx 0;
}

.materials-container .t-stepper {
  display: inline-flex;
}

.materials-container .t-progress {
  height: 12rpx;
}

.materials-container .t-empty {
  padding: 80rpx 0;
}

.materials-container .t-fab {
  box-shadow: var(--shadow-elevated);
}